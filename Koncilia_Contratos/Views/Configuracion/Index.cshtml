<!-- Lista de usuarios -->
@if (Model.Any())
{
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-list text-[#0c1791]"></i>
                Listado de Usuarios
            </h3>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-[#0c1791]">
                    <tr>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Nombre</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Email</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider hidden md:table-cell">Teléfono</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider hidden lg:table-cell">Fecha Registro</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var usuario in Model)
                    {
                        <tr class="hover:bg-[#f6fbff] transition">
                            <td class="px-3 py-2 whitespace-nowrap">
                                <div class="flex items-center gap-3">
                                    <div class="flex-shrink-0 h-9 w-9">
                                        <div class="h-9 w-9 rounded-full bg-[#0c1791] flex items-center justify-center text-white font-semibold text-xs">
                                            @((!string.IsNullOrEmpty(usuario.Nombre) ? usuario.Nombre[0].ToString().ToUpper() : "U") + (!string.IsNullOrEmpty(usuario.Apellido) ? usuario.Apellido[0].ToString().ToUpper() : ""))
                                        </div>
                                    </div>
                                    <div>
                                        <div class="text-sm font-semibold text-gray-900">
                                            @(usuario.Nombre ?? "") @(usuario.Apellido ?? "")
                                        </div>
                                        <div class="text-xs text-gray-500">@usuario.UserName</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap">
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-envelope text-gray-400 text-xs"></i>
                                    <span class="text-sm text-gray-900">@usuario.Email</span>
                                </div>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap hidden md:table-cell">
                                @if (!string.IsNullOrEmpty(usuario.PhoneNumber))
                                {
                                    <div class="flex items-center gap-2">
                                        <i class="fas fa-phone text-gray-400 text-xs"></i>
                                        <span class="text-sm text-gray-900">@usuario.PhoneNumber</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-xs text-gray-400 italic">Sin teléfono</span>
                                }
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-600 hidden lg:table-cell">
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-calendar text-gray-400 text-xs"></i>
                                    @usuario.FechaRegistro.ToString("dd/MM/yyyy")
                                </div>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm">
                                <div class="flex space-x-2">
                                    <a asp-action="Edit" asp-route-id="@usuario.Id" 
                                       class="text-yellow-500 hover:text-yellow-600 transition" 
                                       title="Editar usuario">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@usuario.Id" 
                                       class="text-red-500 hover:text-red-600 transition" 
                                       title="Eliminar usuario">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-8 text-center">
        <div class="flex justify-center mb-4">
            <div class="bg-gradient-to-br from-[#0c1791]/10 to-[#0ff2f2]/10 rounded-full p-5 border border-[#0c1791]/20">
                <i class="fas fa-users text-[#0c1791] text-4xl"></i>
            </div>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No hay usuarios registrados</h3>
        <p class="text-sm text-gray-600">Los usuarios se registran desde la página de registro del sistema.</p>
    </div>
}
