@model IEnumerable<Koncilia_Contratos.Models.ApplicationUser>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<!-- Header -->
<div class="mb-5">
    <h1 class="text-xl sm:text-2xl font-semibold text-gray-900 flex items-center gap-2 mb-1">
        <i class="fas fa-users text-[#0c1791]"></i>
        Gestión de Usuarios
    </h1>
    <p class="text-xs text-gray-600">Administra los usuarios del sistema</p>
</div>

@if (TempData["Success"] != null)
{
    <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-3 rounded-lg">
        <div class="flex items-center gap-2">
            <i class="fas fa-check-circle text-green-500"></i>
            <p class="text-xs text-green-700 flex-1">@TempData["Success"]</p>
            <button onclick="this.parentElement.parentElement.remove()" 
                    class="text-green-500 hover:text-green-700">
                <i class="fas fa-times text-xs"></i>
            </button>
        </div>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-3 rounded-lg">
        <div class="flex items-center gap-2">
            <i class="fas fa-exclamation-circle text-red-500"></i>
            <p class="text-xs text-red-700 flex-1">@TempData["Error"]</p>
            <button onclick="this.parentElement.parentElement.remove()" 
                    class="text-red-500 hover:text-red-700">
                <i class="fas fa-times text-xs"></i>
            </button>
        </div>
    </div>
}

<!-- Botón Nuevo Usuario -->
<div class="mb-5">
    <a asp-action="Create" 
       class="inline-flex items-center gap-2 px-4 py-3 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
        <i class="fas fa-user-plus text-lg"></i>
        <span>Nuevo Usuario</span>
    </a>
</div>

