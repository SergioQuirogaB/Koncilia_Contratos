@model Dictionary<string, List<Koncilia_Contratos.Models.Configuracion>>

@{
    ViewData["Title"] = "Configuración del Sistema";
}

<!-- Header -->
<div class="mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center mb-2">
        <span class="bg-gradient-to-br from-gray-600 to-gray-800 text-white p-2 rounded-lg mr-3">
            <i class="fas fa-cog"></i>
        </span>
        Configuración del Sistema
    </h1>
    <p class="text-sm text-gray-600">Gestiona los parámetros y ajustes del sistema</p>
</div>

@if (TempData["Success"] != null)
{
    <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <i class="fas fa-check-circle text-green-500"></i>
            </div>
            <div class="ml-3">
                <p class="text-sm text-green-700">@TempData["Success"]</p>
            </div>
            <button onclick="this.parentElement.parentElement.parentElement.remove()" 
                    class="ml-auto -mx-1.5 -my-1.5 text-green-500 hover:text-green-700">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
}

<!-- Botón nueva configuración -->
<div class="mb-6">
    <a asp-action="Create" 
       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium rounded-lg shadow-md hover:shadow-lg transition">
        <i class="fas fa-plus mr-2"></i>
        Nueva Configuración
    </a>
</div>

<!-- Categorías de configuración -->
@if (Model.Any())
{
    <div class="space-y-6">
        @foreach (var categoria in Model)
        {
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="px-4 py-3 bg-gradient-to-r from-gray-600 to-gray-800 border-b border-gray-900">
                    <h3 class="text-lg font-semibold text-white flex items-center">
                        <i class="fas fa-folder mr-2"></i>
                        @categoria.Key
                    </h3>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Clave</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Valor</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider hidden md:table-cell">Descripción</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in categoria.Value)
                            {
                                <tr class="hover:bg-gray-50 transition">
                                    <td class="px-4 py-3 whitespace-nowrap">
                                        <span class="text-sm font-semibold text-gray-900">@item.Clave</span>
                                    </td>
                                    <td class="px-4 py-3 whitespace-nowrap">
                                        <span class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-800 rounded-md text-sm font-medium">
                                            @item.Valor
                                        </span>
                                    </td>
                                    <td class="px-4 py-3 text-sm text-gray-600 hidden md:table-cell">
                                        @item.Descripcion
                                    </td>
                                    <td class="px-4 py-3 whitespace-nowrap text-sm">
                                        <div class="flex space-x-2">
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="text-yellow-600 hover:text-yellow-800 transition p-1" 
                                               title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="text-red-600 hover:text-red-800 transition p-1" 
                                               title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="bg-white rounded-xl shadow-md p-8 sm:p-12 text-center">
        <div class="flex justify-center mb-4">
            <div class="bg-gray-100 rounded-full p-6">
                <i class="fas fa-cog text-gray-600 text-5xl"></i>
            </div>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">No hay configuraciones registradas</h3>
        <p class="text-gray-600 mb-6">Comienza creando tu primera configuración del sistema.</p>
        <a asp-action="Create" 
           class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium rounded-lg shadow-md hover:shadow-lg transition">
            <i class="fas fa-plus mr-2"></i>
            Crear Configuración
        </a>
    </div>
}
