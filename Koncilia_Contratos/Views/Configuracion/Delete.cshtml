@model Koncilia_Contratos.Models.Configuracion

@{
    ViewData["Title"] = "Eliminar Configuración";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-4 text-danger">@ViewData["Title"]</h1>
            <hr />
        </div>
    </div>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">¡Atención!</h4>
        <p>¿Estás seguro de que deseas eliminar esta configuración?</p>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Información de la Configuración</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Categoria)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Clave)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Clave)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Valor)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Valor)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}

