@model Koncilia_Contratos.Models.ApplicationUser

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<!-- Header -->
<div class="mb-5">
    <h1 class="text-xl sm:text-2xl font-semibold text-gray-900 flex items-center gap-2 mb-1">
        <i class="fas fa-trash text-[#0c1791]"></i>
        Eliminar Usuario
    </h1>
    <p class="text-xs text-gray-600">Confirma la eliminación del usuario seleccionado</p>
</div>

<!-- Alerta de advertencia -->
<div class="bg-red-50 border-l-4 border-red-500 p-3 rounded-lg mb-4">
    <div class="flex items-center gap-2">
        <i class="fas fa-exclamation-triangle text-red-500"></i>
        <p class="text-xs text-red-700">¿Estás seguro de que deseas eliminar este usuario? Esta acción no se puede deshacer.</p>
    </div>
</div>

<!-- Información del Usuario -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden mb-4">
    <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
        <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
            <i class="fas fa-info-circle text-[#0c1791]"></i>
            Información del Usuario
        </h3>
    </div>
    <div class="p-4">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Nombre Completo</dt>
                <dd class="text-sm font-semibold text-gray-900">@(Model.Nombre ?? "") @(Model.Apellido ?? "")</dd>
            </div>

            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Nombre de Usuario</dt>
                <dd class="text-sm font-semibold text-[#0c1791]">@Model.UserName</dd>
            </div>

            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Email</dt>
                <dd class="text-sm font-semibold text-gray-900">@Model.Email</dd>
            </div>

            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Teléfono</dt>
                <dd class="text-sm font-semibold text-gray-900">@(Model.PhoneNumber ?? "N/A")</dd>
            </div>

            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Fecha de Registro</dt>
                <dd class="text-sm font-semibold text-gray-900">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
            </div>
        </dl>
    </div>
</div>

<!-- Formulario de eliminación -->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="flex flex-col sm:flex-row gap-3">
        <button type="submit" class="flex items-center justify-center gap-2 px-5 py-2.5 bg-red-600 text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-red-700 transition text-sm">
            <i class="fas fa-trash"></i>
            Confirmar Eliminación
        </button>
        <a asp-action="Index" class="flex items-center justify-center gap-2 px-5 py-2.5 bg-white hover:bg-gray-50 border border-gray-200 hover:border-gray-300 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md transition text-sm">
            <i class="fas fa-times"></i>
            Cancelar
        </a>
    </div>
</form>

