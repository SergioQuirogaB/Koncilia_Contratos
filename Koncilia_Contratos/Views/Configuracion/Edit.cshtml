@model Koncilia_Contratos.Models.ApplicationUser

@{
    ViewData["Title"] = "Editar Usuario";
}

<!-- Header -->
<div class="mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center mb-2">
        <span class="bg-gradient-to-br from-yellow-500 to-orange-600 text-white p-2 rounded-lg mr-3">
            <i class="fas fa-user-edit"></i>
        </span>
        Editar Usuario
    </h1>
    <p class="text-sm text-gray-600">Modifica la información del usuario</p>
</div>

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="px-4 py-3 bg-gradient-to-r from-yellow-500 to-orange-600 border-b border-yellow-700">
            <h3 class="text-lg font-semibold text-white flex items-center">
                <i class="fas fa-user mr-2"></i>
                Información del Usuario
            </h3>
        </div>
        
        <div class="p-6">
            <form asp-action="Edit" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-red-500"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">Por favor corrija los errores antes de continuar.</p>
                        </div>
                    </div>
                </div>
                
                <input type="hidden" asp-for="Id" />
                
                <!-- Información Personal -->
                <div class="border-b border-gray-200 pb-4">
                    <h4 class="text-md font-semibold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-id-card text-blue-600 mr-2"></i>
                        Información Personal
                    </h4>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Nombre -->
                        <div>
                            <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-user text-gray-400 mr-1"></i> Nombre
                            </label>
                            <input asp-for="Nombre" 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition" />
                            <span asp-validation-for="Nombre" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                        
                        <!-- Apellido -->
                        <div>
                            <label asp-for="Apellido" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-user text-gray-400 mr-1"></i> Apellido
                            </label>
                            <input asp-for="Apellido" 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition" />
                            <span asp-validation-for="Apellido" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Información de Cuenta -->
                <div class="border-b border-gray-200 pb-4">
                    <h4 class="text-md font-semibold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-key text-green-600 mr-2"></i>
                        Información de Cuenta
                    </h4>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Nombre de Usuario -->
                        <div>
                            <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-at text-gray-400 mr-1"></i> Nombre de Usuario
                            </label>
                            <input asp-for="UserName" 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition" />
                            <span asp-validation-for="UserName" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                        
                        <!-- Email -->
                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-envelope text-gray-400 mr-1"></i> Email
                            </label>
                            <input asp-for="Email" type="email"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition" />
                            <span asp-validation-for="Email" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Información de Contacto -->
                <div class="border-b border-gray-200 pb-4">
                    <h4 class="text-md font-semibold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-phone text-purple-600 mr-2"></i>
                        Información de Contacto
                    </h4>
                    
                    <!-- Teléfono -->
                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-phone text-gray-400 mr-1"></i> Teléfono
                        </label>
                        <input asp-for="PhoneNumber" type="tel"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition" 
                               placeholder="Ej: +57 300 123 4567" />
                        <span asp-validation-for="PhoneNumber" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                </div>
                
                <!-- Cambio de Contraseña -->
                <div class="border-b border-gray-200 pb-4">
                    <h4 class="text-md font-semibold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-lock text-red-600 mr-2"></i>
                        Cambiar Contraseña
                    </h4>
                    
                    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-4 rounded-r-lg">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-info-circle text-yellow-500"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-yellow-700">Deja estos campos vacíos si no deseas cambiar la contraseña del usuario.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Nueva Contraseña -->
                        <div>
                            <label for="NuevaPassword" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-key text-gray-400 mr-1"></i> Nueva Contraseña
                            </label>
                            <input type="password" 
                                   id="NuevaPassword" 
                                   name="NuevaPassword"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition" 
                                   placeholder="Ingrese nueva contraseña" />
                            <p class="text-xs text-gray-500 mt-1">Mínimo 6 caracteres</p>
                            <span class="text-red-600 text-xs mt-1 block" data-valmsg-for="NuevaPassword" data-valmsg-replace="true"></span>
                        </div>
                        
                        <!-- Confirmar Contraseña -->
                        <div>
                            <label for="ConfirmarPassword" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-key text-gray-400 mr-1"></i> Confirmar Contraseña
                            </label>
                            <input type="password" 
                                   id="ConfirmarPassword" 
                                   name="ConfirmarPassword"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition" 
                                   placeholder="Confirme la contraseña" />
                            <span class="text-red-600 text-xs mt-1 block" data-valmsg-for="ConfirmarPassword" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Botones -->
                <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-200">
                    <button type="submit" 
                            class="flex-1 sm:flex-initial inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-yellow-600 to-orange-600 hover:from-yellow-700 hover:to-orange-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition">
                        <i class="fas fa-save mr-2"></i>
                        Guardar Cambios
                    </button>
                    <a asp-action="Index" 
                       class="flex-1 sm:flex-initial inline-flex items-center justify-center px-6 py-3 bg-white hover:bg-gray-50 border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-semibold rounded-lg transition">
                        <i class="fas fa-times mr-2"></i>
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
