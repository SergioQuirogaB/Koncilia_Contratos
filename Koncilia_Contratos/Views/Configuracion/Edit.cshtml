@model Koncilia_Contratos.Models.ApplicationUser

@{
    ViewData["Title"] = "Editar Usuario";
}

<!-- Header -->
<div class="mb-5">
    <h1 class="text-xl sm:text-2xl font-semibold text-gray-900 flex items-center gap-2 mb-1">
        <i class="fas fa-user-edit text-[#0c1791]"></i>
        Editar Usuario
    </h1>
    <p class="text-xs text-gray-600">Modifica la información del usuario</p>
</div>

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-user text-[#0c1791]"></i>
                Información del Usuario
            </h3>
        </div>
        
        <div class="p-4">
            <form asp-action="Edit" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-3 rounded-lg">
                    <div class="flex items-center gap-2">
                        <i class="fas fa-exclamation-circle text-red-500"></i>
                        <p class="text-xs text-red-700">Por favor corrija los errores antes de continuar.</p>
                    </div>
                </div>
                
                <input type="hidden" asp-for="Id" />
                
                <!-- Información Personal -->
                <div class="border-b border-gray-200 pb-3">
                    <h4 class="text-sm font-semibold text-gray-900 mb-3 flex items-center gap-2">
                        <i class="fas fa-id-card text-[#0c1791] text-xs"></i>
                        Información Personal
                    </h4>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Nombre -->
                        <div>
                            <label asp-for="Nombre" class="block text-xs font-semibold text-gray-700 mb-1.5">
                                <i class="fas fa-user text-[#0c1791] mr-1 text-xs"></i> Nombre
                            </label>
                            <input asp-for="Nombre" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" />
                            <span asp-validation-for="Nombre" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                        
                        <!-- Apellido -->
                        <div>
                            <label asp-for="Apellido" class="block text-xs font-semibold text-gray-700 mb-1.5">
                                <i class="fas fa-user text-[#0c1791] mr-1 text-xs"></i> Apellido
                            </label>
                            <input asp-for="Apellido" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" />
                            <span asp-validation-for="Apellido" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Información de Cuenta -->
                <div class="border-b border-gray-200 pb-3">
                    <h4 class="text-sm font-semibold text-gray-900 mb-3 flex items-center gap-2">
                        <i class="fas fa-key text-[#0c1791] text-xs"></i>
                        Información de Cuenta
                    </h4>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Nombre de Usuario -->
                        <div>
                            <label asp-for="UserName" class="block text-xs font-semibold text-gray-700 mb-1.5">
                                <i class="fas fa-at text-[#0c1791] mr-1 text-xs"></i> Nombre de Usuario
                            </label>
                            <input asp-for="UserName" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" />
                            <span asp-validation-for="UserName" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                        
                        <!-- Email -->
                        <div>
                            <label asp-for="Email" class="block text-xs font-semibold text-gray-700 mb-1.5">
                                <i class="fas fa-envelope text-[#0c1791] mr-1 text-xs"></i> Email
                            </label>
                            <input asp-for="Email" type="email"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" />
                            <span asp-validation-for="Email" class="text-red-600 text-xs mt-1 block"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Información de Contacto -->
                <div class="border-b border-gray-200 pb-3">
                    <h4 class="text-sm font-semibold text-gray-900 mb-3 flex items-center gap-2">
                        <i class="fas fa-phone text-[#0c1791] text-xs"></i>
                        Información de Contacto
                    </h4>
                    
                    <!-- Teléfono -->
                    <div>
                        <label asp-for="PhoneNumber" class="block text-xs font-semibold text-gray-700 mb-1.5">
                            <i class="fas fa-phone text-[#0c1791] mr-1 text-xs"></i> Teléfono
                        </label>
                        <input asp-for="PhoneNumber" type="tel"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" 
                               placeholder="Ej: +57 300 123 4567" />
                        <span asp-validation-for="PhoneNumber" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                </div>
                
                <!-- Cambio de Contraseña -->
                <div class="border-b border-gray-200 pb-3">
                    <h4 class="text-sm font-semibold text-gray-900 mb-3 flex items-center gap-2">
                        <i class="fas fa-lock text-[#0c1791] text-xs"></i>
                        Cambiar Contraseña
                    </h4>
                    
                    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-3 mb-3 rounded-lg">
                        <div class="flex items-center gap-2">
                            <i class="fas fa-info-circle text-yellow-500"></i>
                            <p class="text-xs text-yellow-700">Deja estos campos vacíos si no deseas cambiar la contraseña del usuario.</p>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Nueva Contraseña -->
                        <div>
                            <label for="NuevaPassword" class="block text-xs font-semibold text-gray-700 mb-1.5">
                                <i class="fas fa-key text-[#0c1791] mr-1 text-xs"></i> Nueva Contraseña
                            </label>
                            <input type="password" 
                                   id="NuevaPassword" 
                                   name="NuevaPassword"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" 
                                   placeholder="Ingrese nueva contraseña" />
                            <p class="text-xs text-gray-500 mt-1">Mínimo 6 caracteres</p>
                            <span class="text-red-600 text-xs mt-1 block" data-valmsg-for="NuevaPassword" data-valmsg-replace="true"></span>
                        </div>
                        
                        <!-- Confirmar Contraseña -->
                        <div>
                            <label for="ConfirmarPassword" class="block text-xs font-semibold text-gray-700 mb-1.5">
                                <i class="fas fa-key text-[#0c1791] mr-1 text-xs"></i> Confirmar Contraseña
                            </label>
                            <input type="password" 
                                   id="ConfirmarPassword" 
                                   name="ConfirmarPassword"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" 
                                   placeholder="Confirme la contraseña" />
                            <span class="text-red-600 text-xs mt-1 block" data-valmsg-for="ConfirmarPassword" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Botones -->
                <div class="flex flex-col sm:flex-row gap-3 pt-3 border-t border-gray-200">
                    <button type="submit" 
                            class="flex items-center justify-center gap-2 px-5 py-2.5 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
                        <i class="fas fa-save"></i>
                        Guardar Cambios
                    </button>
                    <a asp-action="Index" 
                       class="flex items-center justify-center gap-2 px-5 py-2.5 bg-white hover:bg-gray-50 border border-gray-200 hover:border-gray-300 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md transition text-sm">
                        <i class="fas fa-times"></i>
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
