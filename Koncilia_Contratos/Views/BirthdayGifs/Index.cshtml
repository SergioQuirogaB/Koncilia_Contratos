@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Gestión de Plantillas GIF";
}

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 4000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            Toast.fire({
                icon: 'success',
                title: '@TempData["Success"]',
                customClass: {
                    popup: 'rounded-2xl shadow-2xl',
                    title: 'text-lg font-bold text-green-800'
                }
            });
        });
    </script>
}

@if (TempData["Error"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '@TempData["Error"]',
                customClass: {
                    popup: 'rounded-2xl shadow-2xl'
                }
            });
        });
    </script>
}

<div class="mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center mb-2">
        <span class="bg-gradient-to-br from-purple-500 to-pink-600 text-white p-2 rounded-lg mr-3">
            <i class="fas fa-image"></i>
        </span>
        Gestión de Plantillas de Imágenes para Cumpleaños
    </h1>
    <p class="text-sm text-gray-600">Sube y gestiona imágenes (GIF, PNG, JPG). El sistema seleccionará aleatoriamente una de ellas para cada correo de cumpleaños</p>
</div>

<!-- Formulario para subir imágenes -->
<div class="bg-white rounded-2xl shadow-xl overflow-hidden border-t-4 border-purple-500 mb-6">
    <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-pink-50">
        <h3 class="text-lg font-bold text-gray-900 flex items-center">
            <i class="fas fa-upload text-purple-600 mr-2"></i>
            Subir Nueva Imagen
        </h3>
    </div>
    <div class="p-6">
        <form asp-action="Upload" method="post" enctype="multipart/form-data" class="flex flex-col sm:flex-row gap-4">
            @Html.AntiForgeryToken()
            <div class="flex-1">
                <input type="file" 
                       name="file" 
                       accept=".gif,.png,.jpg,.jpeg" 
                       required
                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition shadow-sm">
                <p class="text-xs text-gray-500 mt-2">
                    <i class="fas fa-info-circle mr-1"></i>
                    Archivos permitidos: GIF, PNG, JPG, JPEG. Tamaño máximo: 10MB
                </p>
            </div>
            <button type="submit" 
                    class="px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all">
                <i class="fas fa-upload mr-2"></i>
                Subir Imagen
            </button>
        </form>
    </div>
</div>

<!-- Lista de GIFs como archivos -->
@if (Model != null && Model.Any())
{
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-t-4 border-purple-500">
        <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-pink-50">
            <h3 class="text-lg font-bold text-gray-900 flex items-center">
                <i class="fas fa-folder-open text-purple-600 mr-2"></i>
                Archivos de Imagen Guardados (@Model.Count())
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gradient-to-r from-purple-600 to-pink-600">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                            <i class="fas fa-file-image mr-2"></i>Archivo
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                            <i class="fas fa-weight mr-2"></i>Tamaño
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                            <i class="fas fa-calendar mr-2"></i>Fecha Modificación
                        </th>
                        <th class="px-6 py-4 text-center text-xs font-bold text-white uppercase tracking-wider">
                            <i class="fas fa-cogs mr-2"></i>Acciones
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var gif in Model)
                    {
                        var fileSizeMB = (gif.FileSize / 1024.0 / 1024.0).ToString("F2");
                        var fileSizeKB = (gif.FileSize / 1024.0).ToString("F2");
                        var displaySize = gif.FileSize < 1024 * 1024 ? $"{fileSizeKB} KB" : $"{fileSizeMB} MB";
                        
                        <tr class="hover:bg-gradient-to-r hover:from-purple-50 hover:to-pink-50 transition-all">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <div class="h-10 w-10 rounded-lg bg-gradient-to-br from-purple-400 to-pink-500 flex items-center justify-center">
                                            <i class="fas fa-file-image text-white text-lg"></i>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-bold text-gray-900">@gif.FileName</div>
                                        <div class="text-xs text-gray-500">
                                            <a href="~/images/birthday/@gif.FileName" target="_blank" 
                                               class="text-purple-600 hover:text-purple-800 hover:underline">
                                                <i class="fas fa-eye mr-1"></i>Ver archivo
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-700">
                                    <i class="fas fa-weight text-gray-400 mr-1"></i>
                                    @displaySize
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-700">
                                    <i class="fas fa-calendar text-gray-400 mr-1"></i>
                                    @gif.LastModified.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <form asp-action="Delete" method="post" style="display:inline;" 
                                      onsubmit="return confirmarEliminacion('@gif.FileName')">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="fileName" value="@gif.FileName">
                                    <button type="submit" 
                                            class="px-4 py-2 bg-gradient-to-r from-red-600 to-rose-600 hover:from-red-700 hover:to-rose-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all text-sm"
                                            title="Eliminar archivo">
                                        <i class="fas fa-trash mr-1"></i>
                                        Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-t-4 border-purple-500">
        <div class="p-12 sm:p-16 text-center">
            <div class="flex justify-center mb-6">
                <div class="bg-gradient-to-br from-purple-100 to-pink-100 rounded-full p-8 shadow-xl">
                    <i class="fas fa-folder-open text-purple-600 text-6xl"></i>
                </div>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">No hay archivos de imagen guardados</h3>
            <p class="text-gray-600 mb-8 text-lg">Sube tu primera imagen (GIF, PNG, JPG) usando el formulario de arriba. Todas las imágenes que subas estarán disponibles para ser seleccionadas aleatoriamente en los correos.</p>
        </div>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

@section Scripts {
    <script>
        function confirmarEliminacion(fileName) {
            return confirm(`¿Estás seguro de que deseas eliminar "${fileName}"?\n\nEsta acción no se puede deshacer.`);
        }
    </script>
}

