@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Gestión de Plantillas GIF";
}

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 4000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            Toast.fire({
                icon: 'success',
                title: '@TempData["Success"]',
                customClass: {
                    popup: 'rounded-2xl shadow-2xl',
                    title: 'text-lg font-bold text-green-800'
                }
            });
        });
    </script>
}

@if (TempData["Error"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '@TempData["Error"]',
                customClass: {
                    popup: 'rounded-2xl shadow-2xl'
                }
            });
        });
    </script>
}

<!-- Header -->
<div class="mb-5">
    <h1 class="text-xl sm:text-2xl font-semibold text-gray-900 flex items-center gap-2 mb-1">
        <i class="fas fa-image text-[#0c1791]"></i>
        Gestión de Plantillas de Imágenes para Cumpleaños
    </h1>
    <p class="text-xs text-gray-600">Sube y gestiona imágenes (GIF, PNG, JPG). El sistema seleccionará aleatoriamente una de ellas para cada correo de cumpleaños</p>
</div>

<!-- Formulario para subir imágenes -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden mb-5">
    <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
        <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
            <i class="fas fa-upload text-[#0c1791]"></i>
            Subir Nueva Imagen
        </h3>
    </div>
    <div class="p-4">
        <form asp-action="Upload" method="post" enctype="multipart/form-data" class="flex flex-col sm:flex-row gap-3">
            @Html.AntiForgeryToken()
            <div class="flex-1">
                <input type="file" 
                       name="file" 
                       accept=".gif,.png,.jpg,.jpeg" 
                       required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm">
                <p class="text-xs text-gray-500 mt-1.5">
                    <i class="fas fa-info-circle text-[#0c1791] mr-1 text-xs"></i>
                    Archivos permitidos: GIF, PNG, JPG, JPEG. Tamaño máximo: 10MB
                </p>
            </div>
            <button type="submit" 
                    class="flex items-center justify-center gap-2 px-4 py-2 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
                <i class="fas fa-upload text-lg"></i>
                <span>Subir Imagen</span>
            </button>
        </form>
    </div>
</div>

<!-- Lista de GIFs como archivos -->
@if (Model != null && Model.Any())
{
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-folder-open text-[#0c1791]"></i>
                Archivos de Imagen Guardados (@Model.Count())
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-[#0c1791]">
                    <tr>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">
                            <i class="fas fa-file-image mr-1"></i>Archivo
                        </th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">
                            <i class="fas fa-weight mr-1"></i>Tamaño
                        </th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">
                            <i class="fas fa-calendar mr-1"></i>Fecha Modificación
                        </th>
                        <th class="px-3 py-2.5 text-center text-xs font-semibold text-white uppercase tracking-wider">
                            <i class="fas fa-cogs mr-1"></i>Acciones
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var gif in Model)
                    {
                        var fileSizeMB = (gif.FileSize / 1024.0 / 1024.0).ToString("F2");
                        var fileSizeKB = (gif.FileSize / 1024.0).ToString("F2");
                        var displaySize = gif.FileSize < 1024 * 1024 ? $"{fileSizeKB} KB" : $"{fileSizeMB} MB";
                        
                        <tr class="hover:bg-[#f6fbff] transition">
                            <td class="px-3 py-2 whitespace-nowrap">
                                <div class="flex items-center gap-3">
                                    <div class="flex-shrink-0 h-9 w-9">
                                        <div class="h-9 w-9 rounded-lg bg-[#0c1791] flex items-center justify-center">
                                            <i class="fas fa-file-image text-white text-sm"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="text-sm font-semibold text-gray-900">@gif.FileName</div>
                                        <div class="text-xs text-gray-500">
                                            <a href="~/images/birthday/@gif.FileName" target="_blank" 
                                               class="text-[#0c1791] hover:text-[#0a1478] transition">
                                                <i class="fas fa-eye mr-1" style="font-size: 8px;"></i>Ver archivo
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap">
                                <div class="text-sm text-gray-700 flex items-center gap-1">
                                    <i class="fas fa-weight text-gray-400 text-xs"></i>
                                    @displaySize
                                </div>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap">
                                <div class="text-sm text-gray-700 flex items-center gap-1">
                                    <i class="fas fa-calendar text-gray-400 text-xs"></i>
                                    @gif.LastModified.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap">
                                <div class="flex justify-center">
                                    <form asp-action="Delete" method="post" style="display:inline;" 
                                          onsubmit="return confirmarEliminacion('@gif.FileName')">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="fileName" value="@gif.FileName">
                                        <button type="submit" 
                                                class="text-red-500 hover:text-red-600 transition" 
                                                title="Eliminar archivo">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-8 text-center">
        <div class="flex justify-center mb-4">
            <div class="bg-gradient-to-br from-[#0c1791]/10 to-[#0ff2f2]/10 rounded-full p-5 border border-[#0c1791]/20">
                <i class="fas fa-folder-open text-[#0c1791] text-4xl"></i>
            </div>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No hay archivos de imagen guardados</h3>
        <p class="text-sm text-gray-600">Sube tu primera imagen (GIF, PNG, JPG) usando el formulario de arriba. Todas las imágenes que subas estarán disponibles para ser seleccionadas aleatoriamente en los correos.</p>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

@section Scripts {
    <script>
        function confirmarEliminacion(fileName) {
            return confirm(`¿Estás seguro de que deseas eliminar "${fileName}"?\n\nEsta acción no se puede deshacer.`);
        }
    </script>
}

