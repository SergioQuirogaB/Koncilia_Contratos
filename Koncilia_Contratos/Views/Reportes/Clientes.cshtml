@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Reporte de Gestión de Clientes";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <hr />
        </div>
    </div>

    <!-- Tarjetas de resumen -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total de Clientes</h5>
                    <h2 class="card-text">@ViewBag.TotalClientes</h2>
                    <p class="card-text"><small>En la base de datos</small></p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Clientes Activos</h5>
                    <h2 class="card-text">@ViewBag.ClientesActivos</h2>
                    <p class="card-text"><small>Con contratos activos</small></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de clientes -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Detalle por Cliente</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="tablaClientes">
                            <thead class="table-dark">
                                <tr>
                                    <th>Cliente</th>
                                    <th>Total Contratos</th>
                                    <th>Activos</th>
                                    <th>Valor Total</th>
                                    <th>Facturado</th>
                                    <th>Pendiente</th>
                                    <th>% Ejecución</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><strong>@item.Cliente</strong></td>
                                        <td>@item.TotalContratos</td>
                                        <td>
                                            @if (item.ContratosActivos > 0)
                                            {
                                                <span class="badge bg-success">@item.ContratosActivos</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">0</span>
                                            }
                                        </td>
                                        <td>@(((decimal)item.ValorTotal).ToString("C0", new System.Globalization.CultureInfo("es-CO")))</td>
                                        <td>@(((decimal)item.ValorFacturado).ToString("C0", new System.Globalization.CultureInfo("es-CO")))</td>
                                        <td>@(((decimal)item.ValorPendiente).ToString("C0", new System.Globalization.CultureInfo("es-CO")))</td>
                                        <td>
                                            <div class="progress" style="min-width: 100px;">
                                                <div class="progress-bar @(item.PromedioEjecucion >= 75 ? "bg-success" : item.PromedioEjecucion >= 50 ? "bg-info" : item.PromedioEjecucion >= 25 ? "bg-warning" : "bg-danger")" 
                                                     role="progressbar" 
                                                     style="width: @(item.PromedioEjecucion)%" 
                                                     aria-valuenow="@item.PromedioEjecucion" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @(((decimal)item.PromedioEjecucion).ToString("F2"))%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Volver a Reportes
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    
    <script>
        $(document).ready(function() {
            $('#tablaClientes').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
                },
                order: [[3, 'desc']],
                pageLength: 25
            });
        });
    </script>
}

