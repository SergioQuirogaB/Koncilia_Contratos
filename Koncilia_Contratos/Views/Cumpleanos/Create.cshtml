@model Koncilia_Contratos.Models.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
}

<!-- Header -->
<div class="mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center mb-2">
        <span class="bg-gradient-to-br from-blue-500 to-indigo-600 text-white p-2 rounded-lg mr-3">
            <i class="fas fa-user-plus"></i>
        </span>
        Crear Nuevo Empleado
    </h1>
    <p class="text-sm text-gray-600">Complete el formulario para registrar un nuevo empleado</p>
</div>

<form asp-action="Create" method="post" class="space-y-6">
    <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-exclamation-circle text-red-500"></i>
            </div>
            <div class="ml-3">
                <p class="text-sm text-red-700">Por favor corrija los errores antes de continuar.</p>
            </div>
        </div>
    </div>
    
    <!-- Información del Empleado -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="px-4 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 border-b border-blue-700">
            <h3 class="text-lg font-semibold text-white flex items-center">
                <i class="fas fa-user mr-2"></i>
                Información del Empleado
            </h3>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <!-- Nombre -->
                <div>
                    <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Nombre" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" />
                    <span asp-validation-for="Nombre" class="text-red-600 text-xs mt-1 block"></span>
                </div>
                
                <!-- Apellido -->
                <div>
                    <label asp-for="Apellido" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Apellido" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" />
                    <span asp-validation-for="Apellido" class="text-red-600 text-xs mt-1 block"></span>
                </div>
                
                <!-- Correo Electrónico -->
                <div class="sm:col-span-2">
                    <label asp-for="CorreoElectronico" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-envelope text-blue-600 mr-1"></i>
                        @Html.DisplayNameFor(m => m.CorreoElectronico) <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="CorreoElectronico" type="email" placeholder="ejemplo@email.com" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" />
                    <span asp-validation-for="CorreoElectronico" class="text-red-600 text-xs mt-1 block"></span>
                    <p class="text-xs text-blue-600 mt-1 flex items-center">
                        <i class="fas fa-info-circle mr-1"></i>
                        <strong>Importante:</strong> El sistema enviará automáticamente un correo de felicitación a esta dirección el día del cumpleaños.
                    </p>
                </div>
                
                <!-- Fecha de Cumpleaños (Solo Día y Mes) -->
                <div class="sm:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-calendar text-blue-600 mr-1"></i>
                        Fecha de Cumpleaños <span class="text-red-500">*</span>
                    </label>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-medium text-gray-600 mb-1">Día</label>
                            <input type="number" id="diaCumpleanos" min="1" max="31" placeholder="DD" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" required />
                            <span class="text-red-600 text-xs mt-1 hidden" id="errorDia"></span>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-600 mb-1">Mes</label>
                            <select id="mesCumpleanos" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" required>
                                <option value="">Seleccione...</option>
                                @for (int mes = 1; mes <= 12; mes++)
                                {
                                    var nombreMes = new DateTime(2000, mes, 1).ToString("MMMM", new System.Globalization.CultureInfo("es-ES"));
                                    nombreMes = char.ToUpper(nombreMes[0]) + nombreMes.Substring(1);
                                    <option value="@mes">@nombreMes</option>
                                }
                            </select>
                            <span class="text-red-600 text-xs mt-1 hidden" id="errorMes"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="FechaCumpleanos" id="FechaCumpleanos" />
                    <span asp-validation-for="FechaCumpleanos" class="text-red-600 text-xs mt-1 block"></span>
                    <p class="text-xs text-gray-500 mt-1">Solo necesitas ingresar el día y mes del cumpleaños</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Botones -->
    <div class="flex flex-col sm:flex-row gap-3">
        <button type="submit" class="flex-1 sm:flex-initial inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition">
            <i class="fas fa-save mr-2"></i>
            Guardar Empleado
        </button>
        <a asp-action="Index" class="flex-1 sm:flex-initial inline-flex items-center justify-center px-6 py-3 bg-white hover:bg-gray-50 border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-semibold rounded-lg transition">
            <i class="fas fa-times mr-2"></i>
            Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const diaInput = document.getElementById('diaCumpleanos');
            const mesSelect = document.getElementById('mesCumpleanos');
            const fechaHidden = document.getElementById('FechaCumpleanos');
            const errorDia = document.getElementById('errorDia');
            const errorMes = document.getElementById('errorMes');

            function actualizarFecha() {
                const dia = parseInt(diaInput.value);
                const mes = parseInt(mesSelect.value);

                if (dia && mes) {
                    // Validar día según el mes
                    const diasEnMes = new Date(2000, mes, 0).getDate();
                    if (dia > diasEnMes) {
                        errorDia.textContent = `Este mes solo tiene ${diasEnMes} días`;
                        errorDia.classList.remove('hidden');
                        fechaHidden.value = '';
                        return;
                    } else {
                        errorDia.classList.add('hidden');
                    }

                    // Crear fecha con año 2000 (solo para almacenamiento, no se usa el año)
                    const fecha = new Date(2000, mes - 1, dia);
                    fechaHidden.value = fecha.toISOString().split('T')[0];
                } else {
                    fechaHidden.value = '';
                }
            }

            diaInput.addEventListener('input', function() {
                const dia = parseInt(this.value);
                if (dia < 1 || dia > 31) {
                    errorDia.textContent = 'El día debe estar entre 1 y 31';
                    errorDia.classList.remove('hidden');
                } else {
                    errorDia.classList.add('hidden');
                }
                actualizarFecha();
            });

            mesSelect.addEventListener('change', function() {
                errorMes.classList.add('hidden');
                actualizarFecha();
            });
        });
    </script>
}

