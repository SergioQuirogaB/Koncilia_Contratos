@model Koncilia_Contratos.Models.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
}

<!-- Header -->
<div class="mb-5">
    <h1 class="text-xl sm:text-2xl font-semibold text-gray-900 flex items-center gap-2 mb-1">
        <i class="fas fa-user-plus text-[#0c1791]"></i>
        Crear Nuevo Empleado
    </h1>
    <p class="text-xs text-gray-600">Complete el formulario para registrar un nuevo empleado</p>
</div>

<form asp-action="Create" method="post" class="space-y-4">
    <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-3 rounded-lg">
        <div class="flex items-center gap-2">
            <i class="fas fa-exclamation-circle text-red-500"></i>
            <p class="text-xs text-red-700">Por favor corrija los errores antes de continuar.</p>
        </div>
    </div>
    
    <!-- Información del Empleado -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-user text-[#0c1791]"></i>
                Información del Empleado
            </h3>
        </div>
        <div class="p-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <!-- Nombre -->
                <div>
                    <label asp-for="Nombre" class="block text-xs font-semibold text-gray-700 mb-1.5"></label>
                    <input asp-for="Nombre" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" />
                    <span asp-validation-for="Nombre" class="text-red-600 text-xs mt-1 block"></span>
                </div>
                
                <!-- Apellido -->
                <div>
                    <label asp-for="Apellido" class="block text-xs font-semibold text-gray-700 mb-1.5"></label>
                    <input asp-for="Apellido" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" />
                    <span asp-validation-for="Apellido" class="text-red-600 text-xs mt-1 block"></span>
                </div>
                
                <!-- Correo Electrónico -->
                <div class="sm:col-span-2">
                    <label asp-for="CorreoElectronico" class="block text-xs font-semibold text-gray-700 mb-1.5">
                        <i class="fas fa-envelope text-[#0c1791] mr-1 text-xs"></i>
                        @Html.DisplayNameFor(m => m.CorreoElectronico) <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="CorreoElectronico" type="email" placeholder="ejemplo@email.com" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" />
                    <span asp-validation-for="CorreoElectronico" class="text-red-600 text-xs mt-1 block"></span>
                    <p class="text-xs text-[#0c1791] mt-1 flex items-center gap-1">
                        <i class="fas fa-info-circle"></i>
                        <strong>Importante:</strong> El sistema enviará automáticamente un correo de felicitación a esta dirección el día del cumpleaños.
                    </p>
                </div>
                
                <!-- Fecha de Cumpleaños (Solo Día y Mes) -->
                <div class="sm:col-span-2">
                    <label class="block text-xs font-semibold text-gray-700 mb-1.5">
                        <i class="fas fa-calendar text-[#0c1791] mr-1 text-xs"></i>
                        Fecha de Cumpleaños <span class="text-red-500">*</span>
                    </label>
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label class="block text-xs font-medium text-gray-600 mb-1">Día</label>
                            <input type="number" id="diaCumpleanos" min="1" max="31" placeholder="DD" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" required />
                            <span class="text-red-600 text-xs mt-1 hidden" id="errorDia"></span>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-600 mb-1">Mes</label>
                            <select id="mesCumpleanos" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm" required>
                                <option value="">Seleccione...</option>
                                @for (int mes = 1; mes <= 12; mes++)
                                {
                                    var nombreMes = new DateTime(2000, mes, 1).ToString("MMMM", new System.Globalization.CultureInfo("es-ES"));
                                    nombreMes = char.ToUpper(nombreMes[0]) + nombreMes.Substring(1);
                                    <option value="@mes">@nombreMes</option>
                                }
                            </select>
                            <span class="text-red-600 text-xs mt-1 hidden" id="errorMes"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="FechaCumpleanos" id="FechaCumpleanos" />
                    <span asp-validation-for="FechaCumpleanos" class="text-red-600 text-xs mt-1 block"></span>
                    <p class="text-xs text-gray-500 mt-1">Solo necesitas ingresar el día y mes del cumpleaños</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Botones -->
    <div class="flex flex-col sm:flex-row gap-3">
        <button type="submit" class="flex items-center justify-center gap-2 px-5 py-2.5 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
            <i class="fas fa-save"></i>
            Guardar Empleado
        </button>
        <a asp-action="Index" class="flex items-center justify-center gap-2 px-5 py-2.5 bg-white hover:bg-gray-50 border border-gray-200 hover:border-gray-300 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md transition text-sm">
            <i class="fas fa-times"></i>
            Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const diaInput = document.getElementById('diaCumpleanos');
            const mesSelect = document.getElementById('mesCumpleanos');
            const fechaHidden = document.getElementById('FechaCumpleanos');
            const errorDia = document.getElementById('errorDia');
            const errorMes = document.getElementById('errorMes');

            function actualizarFecha() {
                const dia = parseInt(diaInput.value);
                const mes = parseInt(mesSelect.value);

                if (dia && mes) {
                    // Validar día según el mes
                    const diasEnMes = new Date(2000, mes, 0).getDate();
                    if (dia > diasEnMes) {
                        errorDia.textContent = `Este mes solo tiene ${diasEnMes} días`;
                        errorDia.classList.remove('hidden');
                        fechaHidden.value = '';
                        return;
                    } else {
                        errorDia.classList.add('hidden');
                    }

                    // Crear fecha con año 2000 (solo para almacenamiento, no se usa el año)
                    const fecha = new Date(2000, mes - 1, dia);
                    fechaHidden.value = fecha.toISOString().split('T')[0];
                } else {
                    fechaHidden.value = '';
                }
            }

            diaInput.addEventListener('input', function() {
                const dia = parseInt(this.value);
                if (dia < 1 || dia > 31) {
                    errorDia.textContent = 'El día debe estar entre 1 y 31';
                    errorDia.classList.remove('hidden');
                } else {
                    errorDia.classList.add('hidden');
                }
                actualizarFecha();
            });

            mesSelect.addEventListener('change', function() {
                errorMes.classList.add('hidden');
                actualizarFecha();
            });
        });
    </script>
}

