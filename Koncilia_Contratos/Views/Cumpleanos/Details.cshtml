@model Koncilia_Contratos.Models.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<!-- Header -->
<div class="mb-5">
    <h1 class="text-xl sm:text-2xl font-semibold text-gray-900 flex items-center gap-2 mb-1">
        <i class="fas fa-user text-[#0c1791]"></i>
        Detalles del Empleado
    </h1>
    <p class="text-xs text-gray-600">Información completa del empleado</p>
</div>

<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
    <!-- Información Personal -->
    <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
        <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
            <i class="fas fa-user text-[#0c1791]"></i>
            Información Personal
        </h3>
    </div>
    <div class="p-4">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Nombre</dt>
                <dd class="text-sm font-semibold text-gray-900">@Model.Nombre</dd>
            </div>
            
            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Apellido</dt>
                <dd class="text-sm font-semibold text-gray-900">@Model.Apellido</dd>
            </div>
            
            <div class="sm:col-span-2">
                <dt class="text-xs font-semibold text-gray-500 mb-1">Nombre Completo</dt>
                <dd class="text-sm font-semibold text-gray-900">@Model.NombreCompleto</dd>
            </div>
            
            <div class="sm:col-span-2">
                <dt class="text-xs font-semibold text-gray-500 mb-1">Correo Electrónico</dt>
                <dd class="text-sm text-gray-900">
                    <a href="mailto:@Model.CorreoElectronico" class="text-[#0c1791] hover:text-[#0a1478] transition flex items-center gap-1">
                        <i class="fas fa-envelope text-xs"></i>
                        @Model.CorreoElectronico
                    </a>
                </dd>
            </div>
        </dl>
    </div>
    
    <!-- Información de Cumpleaños -->
    <div class="px-5 py-3 border-t border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
        <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
            <i class="fas fa-birthday-cake text-[#0c1791]"></i>
            Información de Cumpleaños
        </h3>
    </div>
    <div class="p-4">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Fecha de Cumpleaños</dt>
                <dd class="text-sm font-semibold text-gray-900">@Model.FechaCumpleanos.ToString("dd/MM")</dd>
            </div>
            
            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Próximo Cumpleaños</dt>
                <dd class="text-sm font-semibold text-gray-900">@Model.ProximoCumpleanos.ToString("dd/MM/yyyy")</dd>
            </div>
            
            <div>
                <dt class="text-xs font-semibold text-gray-500 mb-1">Días para Cumpleaños</dt>
                <dd class="text-sm font-semibold text-gray-900">
                    @if (Model.CumpleAniosHoy)
                    {
                        <div class="space-y-1.5">
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                <i class="fas fa-birthday-cake mr-1" style="font-size: 8px;"></i>
                                ¡Hoy es su cumpleaños!
                            </span>
                            <div class="text-xs text-green-600 font-semibold">
                                <i class="fas fa-envelope mr-1" style="font-size: 8px;"></i>
                                El correo de felicitación se enviará automáticamente a las 9:00 AM
                            </div>
                        </div>
                    }
                    else
                    {
                        <span>@Model.DiasParaCumpleanos días</span>
                    }
                </dd>
            </div>
        </dl>
    </div>
    
    <!-- Botones de acción -->
    <div class="px-5 py-4 bg-gray-50 border-t border-gray-200 flex flex-col sm:flex-row gap-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="flex items-center justify-center gap-2 px-5 py-2.5 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
            <i class="fas fa-edit"></i>
            Editar
        </a>
        <a asp-action="Index" class="flex items-center justify-center gap-2 px-5 py-2.5 bg-white hover:bg-gray-50 border border-gray-200 hover:border-gray-300 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md transition text-sm">
            <i class="fas fa-arrow-left"></i>
            Volver a la Lista
        </a>
    </div>
</div>

