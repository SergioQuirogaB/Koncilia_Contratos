@model Koncilia_Contratos.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center mb-2">
        <span class="bg-gradient-to-br from-red-500 to-red-600 text-white p-2 rounded-lg mr-3">
            <i class="fas fa-trash"></i>
        </span>
        Eliminar Empleado
    </h1>
    <p class="text-sm text-gray-600">Confirme la eliminación del empleado</p>
</div>

<div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg mb-6">
    <div class="flex">
        <div class="flex-shrink-0">
            <i class="fas fa-exclamation-triangle text-red-500 text-xl"></i>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-semibold text-red-800">¡Atención!</h3>
            <p class="text-sm text-red-700">¿Estás seguro de que deseas eliminar este empleado? Esta acción no se puede deshacer.</p>
        </div>
    </div>
</div>

<div class="bg-white rounded-xl shadow-xl overflow-hidden">
    <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-blue-200">
        <h3 class="text-lg font-bold text-gray-900 flex items-center">
            <i class="fas fa-user text-blue-600 mr-2"></i>
            Información del Empleado
        </h3>
    </div>
    <div class="p-6">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <dt class="text-sm font-semibold text-gray-700 mb-1">Nombre Completo</dt>
                <dd class="text-sm text-gray-900 font-bold">@Model.NombreCompleto</dd>
            </div>
            
            <div>
                <dt class="text-sm font-semibold text-gray-700 mb-1">Correo Electrónico</dt>
                <dd class="text-sm text-gray-900">@Model.CorreoElectronico</dd>
            </div>
            
            <div>
                <dt class="text-sm font-semibold text-gray-700 mb-1">Fecha de Cumpleaños</dt>
                <dd class="text-sm text-gray-900">@Model.FechaCumpleanos.ToString("dd/MM")</dd>
            </div>
        </dl>
    </div>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <form asp-action="Delete" method="post" class="flex flex-col sm:flex-row gap-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="flex-1 sm:flex-initial inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition">
                <i class="fas fa-trash mr-2"></i>
                Confirmar Eliminación
            </button>
            <a asp-action="Index" class="flex-1 sm:flex-initial inline-flex items-center justify-center px-6 py-3 bg-white hover:bg-gray-50 border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-semibold rounded-lg transition">
                <i class="fas fa-times mr-2"></i>
                Cancelar
            </a>
        </form>
    </div>
</div>

