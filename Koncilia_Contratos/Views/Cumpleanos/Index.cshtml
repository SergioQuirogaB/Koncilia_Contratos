@model IEnumerable<Koncilia_Contratos.Models.Empleado>

@{
    ViewData["Title"] = "Gestión de Cumpleaños";
}

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 4000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            Toast.fire({
                icon: 'success',
                title: '@TempData["Success"]',
                customClass: {
                    popup: 'rounded-2xl shadow-2xl',
                    title: 'text-lg font-bold text-green-800'
                }
            });
        });
    </script>
}

@if (TempData["Error"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '@TempData["Error"]',
                customClass: {
                    popup: 'rounded-2xl shadow-2xl'
                }
            });
        });
    </script>
}

<!-- Botones de acción -->
<div class="mb-5 grid grid-cols-1 sm:grid-cols-2 gap-3">
    <a asp-action="Create" 
       class="flex items-center gap-3 px-4 py-3 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
        <i class="fas fa-plus-circle text-lg"></i>
        <span>Nuevo Empleado</span>
    </a>
    <a asp-controller="BirthdayGifs" asp-action="Index" 
       class="flex items-center gap-3 px-4 py-3 bg-white border border-gray-200 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md hover:border-[#0c1791] hover:text-[#0c1791] transition text-sm">
        <i class="fas fa-image text-lg"></i>
        <span>Gestión de Plantillas GIF</span>
    </a>
</div>

<!-- Filtros de búsqueda -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden mb-5">
    <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
        <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
            <i class="fas fa-filter text-[#0c1791]"></i>
            Filtros de búsqueda
        </h3>
    </div>
    <div class="p-4">
        <form asp-action="Index" method="get" class="flex flex-col sm:flex-row gap-3">
            <!-- Búsqueda -->
            <div class="flex-1">
                <label class="block text-xs font-semibold text-gray-700 mb-1.5">
                    <i class="fas fa-search text-[#0c1791] mr-1 text-xs"></i> Búsqueda
                </label>
                <input type="text" 
                       name="searchString" 
                       value="@ViewData["CurrentFilter"]" 
                       placeholder="Nombre, apellido o correo"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm">
            </div>
            
            <!-- Botones -->
            <div class="flex items-end gap-2">
                <button type="submit" 
                        class="flex items-center justify-center gap-2 px-4 py-2 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
                    <i class="fas fa-search"></i>
                    Buscar
                </button>
                <a asp-action="Index" 
                   class="px-3 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md transition">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Tabla de empleados -->
@if (Model.Any())
{
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden mb-5">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-birthday-cake text-[#0c1791]"></i>
                Lista de Empleados
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-[#0c1791]">
                    <tr>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Nombre</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Correo</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Fecha Cumpleaños</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Próximo Cumpleaños</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Días Restantes</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-[#f6fbff] transition-all @(item.CumpleAniosHoy ? "bg-yellow-50 border-l-4 border-yellow-500" : "")">
                            <td class="px-3 py-2 whitespace-nowrap">
                                <div class="flex items-center gap-3">
                                    <div class="flex-shrink-0 h-9 w-9">
                                        <div class="h-9 w-9 rounded-full bg-[#0c1791] flex items-center justify-center text-white font-semibold text-xs">
                                            @item.Nombre.Substring(0, 1)@item.Apellido.Substring(0, 1)
                                        </div>
                                    </div>
                                    <div>
                                        <div class="text-sm font-semibold text-gray-900">@item.NombreCompleto</div>
                                        @if (item.CumpleAniosHoy)
                                        {
                                            <div class="text-xs text-yellow-600 font-semibold mt-0.5">
                                                <i class="fas fa-birthday-cake mr-1" style="font-size: 8px;"></i>¡Cumple años hoy!
                                            </div>
                                            <div class="text-xs text-green-600 font-semibold mt-0.5">
                                                <i class="fas fa-envelope mr-1" style="font-size: 8px;"></i>Correo se enviará automáticamente
                                            </div>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700">@item.CorreoElectronico</td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700">
                                @item.FechaCumpleanos.ToString("dd/MM")
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700">
                                @item.ProximoCumpleanos.ToString("dd/MM/yyyy")
                                @if (item.ProximoCumpleanos.Year == DateTime.Today.Year + 1)
                                {
                                    <span class="text-xs text-gray-500">(próximo año)</span>
                                }
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap">
                                @if (item.CumpleAniosHoy)
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                        <i class="fas fa-birthday-cake mr-1" style="font-size: 8px;"></i>
                                        ¡Hoy!
                                    </span>
                                }
                                else if (item.DiasParaCumpleanos <= 7)
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                                        <i class="fas fa-clock mr-1" style="font-size: 8px;"></i>
                                        @item.DiasParaCumpleanos días
                                    </span>
                                }
                                else
                                {
                                    <span class="text-xs text-gray-600">@item.DiasParaCumpleanos días</span>
                                }
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm">
                                <div class="flex space-x-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                       class="text-[#0c1791] hover:text-[#0a1478] transition" 
                                       title="Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                       class="text-yellow-500 hover:text-yellow-600 transition" 
                                       title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="confirmarEliminacion(@item.Id, '@item.NombreCompleto')" 
                                            class="text-red-500 hover:text-red-600 transition" 
                                            title="Eliminar"
                                            type="button">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="p-8 text-center">
            <div class="flex justify-center mb-4">
                <div class="bg-gradient-to-br from-[#0c1791]/10 to-[#0ff2f2]/10 rounded-full p-5 border border-[#0c1791]/20">
                    <i class="fas fa-birthday-cake text-[#0c1791] text-4xl"></i>
                </div>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No se encontraron empleados</h3>
            <p class="text-sm text-gray-600 mb-5">Comienza agregando empleados para gestionar sus cumpleaños.</p>
            <a asp-action="Create" 
               class="inline-flex items-center gap-2 px-5 py-2.5 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
                <i class="fas fa-plus-circle"></i>
                Agregar Empleado
            </a>
        </div>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

@section Scripts {
    <script>
        // Función para confirmar eliminación con SweetAlert2
        function confirmarEliminacion(id, nombreCompleto) {
            Swal.fire({
                title: '¿Estás seguro?',
                html: `
                    <div class="text-left">
                        <p class="mb-2">Estás a punto de eliminar al empleado:</p>
                        <div class="bg-gray-100 p-3 rounded-lg mb-3">
                            <p class="font-bold text-gray-800">${nombreCompleto}</p>
                        </div>
                        <p class="text-red-600 font-semibold">Esta acción no se puede deshacer.</p>
                    </div>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc2626',
                cancelButtonColor: '#6b7280',
                confirmButtonText: '<i class="fas fa-trash mr-2"></i>Sí, eliminar',
                cancelButtonText: '<i class="fas fa-times mr-2"></i>Cancelar',
                reverseButtons: true,
                customClass: {
                    popup: 'rounded-2xl',
                    confirmButton: 'px-6 py-3 rounded-lg font-bold shadow-lg',
                    cancelButton: 'px-6 py-3 rounded-lg font-bold shadow-lg'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Crear y enviar formulario para eliminar
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("Delete", "Cumpleanos")';
                    
                    // Agregar token antiforgery
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
                    form.appendChild(tokenInput);
                    
                    // Agregar ID del empleado
                    const idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = 'id';
                    idInput.value = id;
                    form.appendChild(idInput);
                    
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
    @Html.AntiForgeryToken()
}

