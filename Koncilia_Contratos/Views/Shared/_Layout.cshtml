<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Koncilia Contratos</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        }
                    }
                }
            }
        }
    </script>
    
    <style>
        /* Animaciones suaves */
        * {
            transition: all 0.2s ease-in-out;
        }
        
        /* Scrollbar personalizado */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }
        
        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navegación -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <!-- Logo y menú principal -->
                <div class="flex">
                    <!-- Logo -->
                    <div class="flex-shrink-0 flex items-center">
                        <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-2 group">
                            <span class="text-xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent hidden sm:block">
                                Koncilia
                            </span>
                        </a>
                    </div>
                    
                    <!-- Menú desktop -->
                    <div class="hidden md:ml-6 md:flex md:space-x-4">
                        <a asp-controller="Home" asp-action="Index" 
                           class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                            <i class="fas fa-home mr-2"></i>
                            <span>Inicio</span>
                        </a>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Home" asp-action="Dashboard" 
                               class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                                <i class="fas fa-tachometer-alt mr-2"></i>
                                <span>Dashboard</span>
                            </a>
                            <a asp-controller="Contratos" asp-action="Index" 
                               class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                                <i class="fas fa-file-contract mr-2"></i>
                                <span>Contratos</span>
                            </a>
                            <a asp-controller="Reportes" asp-action="Index" 
                               class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                                <i class="fas fa-chart-bar mr-2"></i>
                                <span>Reportes</span>
                            </a>
                            <a asp-controller="Configuracion" asp-action="Index" 
                               class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                                <i class="fas fa-users mr-2"></i>
                                <span>Usuarios</span>
                            </a>
                        }
                    </div>
                </div>
                
                <!-- Usuario y menú mobile -->
                <div class="flex items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Usuario desktop -->
                        <div class="hidden md:flex items-center space-x-4">
                            <div class="flex items-center space-x-2 text-gray-700">
                                <div class="bg-blue-100 p-2 rounded-full">
                                    <i class="fas fa-user text-blue-600"></i>
                                </div>
                                <span class="text-sm font-medium">@User.Identity.Name</span>
                            </div>
                            <form method="post" action="@Url.Action("Logout", "Account")">
                                <button type="submit" 
                                        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 rounded-lg shadow-md hover:shadow-lg">
                                    <i class="fas fa-sign-out-alt mr-2"></i>
                                    <span>Salir</span>
                                </button>
                            </form>
                        </div>
                    }
                    
                    <!-- Botón menú mobile -->
                    <button type="button" 
                            onclick="toggleMobileMenu()"
                            class="md:hidden inline-flex items-center justify-center p-2 rounded-lg text-gray-700 hover:text-blue-600 hover:bg-blue-50 focus:outline-none">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Menú mobile -->
        <div id="mobileMenu" class="hidden md:hidden border-t border-gray-200">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a asp-controller="Home" asp-action="Index" 
                   class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                    <i class="fas fa-home mr-2"></i> Inicio
                </a>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Home" asp-action="Dashboard" 
                       class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                        <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                    </a>
                    <a asp-controller="Contratos" asp-action="Index" 
                       class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                        <i class="fas fa-file-contract mr-2"></i> Contratos
                    </a>
                    <a asp-controller="Reportes" asp-action="Index" 
                       class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                        <i class="fas fa-chart-bar mr-2"></i> Reportes
                    </a>
                    <a asp-controller="Configuracion" asp-action="Index" 
                       class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
                        <i class="fas fa-users mr-2"></i> Usuarios
                    </a>
                    
                    <!-- Usuario mobile -->
                    <div class="border-t border-gray-200 pt-3 mt-3">
                        <div class="flex items-center px-3 py-2">
                            <div class="bg-blue-100 p-2 rounded-full">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <span class="ml-2 text-sm font-medium text-gray-700">@User.Identity.Name</span>
                        </div>
                        <form method="post" action="@Url.Action("Logout", "Account")" class="px-3 py-2">
                            <button type="submit" 
                                    class="w-full inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-red-500 to-red-600 rounded-lg shadow-md">
                                <i class="fas fa-sign-out-alt mr-2"></i> Cerrar Sesión
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </nav>
    
    <!-- Contenido principal -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        @RenderBody()
    </main>
    
    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
                <div class="text-sm text-gray-600">
                    &copy; 2025 Koncilia Contratos. Todos los derechos reservados.
                </div>
                <p class="text-sm text-gray-600">Versión 1.0.0</p>
            </div>
        </div>
    </footer>
    
    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }
        
        // Cerrar menú mobile al hacer clic fuera
        document.addEventListener('click', function(event) {
            const menu = document.getElementById('mobileMenu');
            const button = event.target.closest('button[onclick="toggleMobileMenu()"]');
            
            if (!button && !menu.contains(event.target) && !menu.classList.contains('hidden')) {
                menu.classList.add('hidden');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
