@{
    ViewData["Title"] = "Koncilia Contratos - Inicio";
}

<!-- Hero Section -->
<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 flex items-center">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Contenido Principal -->
            <div class="text-center lg:text-left space-y-8">
                <!-- Logo y Título -->
                <div class="space-y-4">
                    <div class="inline-block">
                        <div class="flex items-center justify-center lg:justify-start space-x-3">
                            <div class="bg-gradient-to-br from-blue-600 to-indigo-700 p-4 rounded-2xl shadow-lg transform hover:scale-110 transition duration-300">
                                <i class="fas fa-file-contract text-white text-4xl"></i>
                            </div>
                            <div>
                                <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold">
                                    <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
                                        Koncilia
                                    </span>
                                    <span class="text-gray-800">Contratos</span>
                                </h1>
                            </div>
                        </div>
                    </div>
                    
                    <p class="text-xl sm:text-2xl text-gray-600 font-medium">
                        Sistema de Gestión de Contratos
                    </p>
                    
                    <p class="text-base sm:text-lg text-gray-500 max-w-2xl">
                        Administra, controla y reporta tus contratos de manera eficiente con nuestra plataforma integral de gestión
                    </p>
                </div>

                <!-- Botones de Acción -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                    <a href="@Url.Action("Login", "Account")" 
                       class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition duration-300">
                        <i class="fas fa-sign-in-alt mr-3 text-xl group-hover:scale-110 transition"></i>
                        <span class="text-lg">Iniciar Sesión</span>
                        <i class="fas fa-arrow-right ml-3 group-hover:translate-x-1 transition"></i>
                    </a>
                    
                    <!-- <a href="@Url.Action("Register", "Account")" 
                       class="group inline-flex items-center justify-center px-8 py-4 bg-white hover:bg-gray-50 text-blue-600 font-semibold rounded-xl shadow-lg hover:shadow-2xl border-2 border-blue-200 hover:border-blue-300 transform hover:-translate-y-1 transition duration-300">
                        <i class="fas fa-user-plus mr-3 text-xl group-hover:scale-110 transition"></i>
                        <span class="text-lg">Registrarse</span>
                    </a> -->
                </div>

                <!-- Características rápidas -->
                <div class="flex flex-wrap gap-6 justify-center lg:justify-start pt-8">
                    <div class="flex items-center space-x-2 text-gray-600">
                        <i class="fas fa-check-circle text-green-500 text-xl"></i>
                        <span class="text-sm font-medium">Gestión Completa</span>
                    </div>
                    <div class="flex items-center space-x-2 text-gray-600">
                        <i class="fas fa-check-circle text-green-500 text-xl"></i>
                        <span class="text-sm font-medium">Reportes Avanzados</span>
                    </div>
                    <div class="flex items-center space-x-2 text-gray-600">
                        <i class="fas fa-check-circle text-green-500 text-xl"></i>
                        <span class="text-sm font-medium">100% Seguro</span>
                    </div>
                </div>
            </div>

            <!-- Tarjetas de Características -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <!-- Tarjeta 1: Dashboard -->
                <div class="bg-white rounded-2xl shadow-xl p-6 hover:shadow-2xl transform hover:-translate-y-2 transition duration-300 border border-gray-100">
                    <div class="bg-gradient-to-br from-blue-100 to-blue-200 rounded-xl p-4 mb-4 inline-block">
                        <i class="fas fa-tachometer-alt text-blue-600 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Dashboard Intuitivo</h3>
                    <p class="text-gray-600 text-sm">Visualiza todas tus métricas y KPIs en tiempo real</p>
                </div>

                <!-- Tarjeta 2: Contratos -->
                <div class="bg-white rounded-2xl shadow-xl p-6 hover:shadow-2xl transform hover:-translate-y-2 transition duration-300 border border-gray-100">
                    <div class="bg-gradient-to-br from-green-100 to-green-200 rounded-xl p-4 mb-4 inline-block">
                        <i class="fas fa-file-contract text-green-600 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Gestión de Contratos</h3>
                    <p class="text-gray-600 text-sm">Administra tus contratos de forma centralizada</p>
                </div>

                <!-- Tarjeta 3: Reportes -->
                <div class="bg-white rounded-2xl shadow-xl p-6 hover:shadow-2xl transform hover:-translate-y-2 transition duration-300 border border-gray-100">
                    <div class="bg-gradient-to-br from-purple-100 to-purple-200 rounded-xl p-4 mb-4 inline-block">
                        <i class="fas fa-chart-bar text-purple-600 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Reportes Avanzados</h3>
                    <p class="text-gray-600 text-sm">Genera reportes ejecutivos y análisis detallados</p>
                </div>

                <!-- Tarjeta 4: Notificaciones -->
                <div class="bg-white rounded-2xl shadow-xl p-6 hover:shadow-2xl transform hover:-translate-y-2 transition duration-300 border border-gray-100">
                    <div class="bg-gradient-to-br from-yellow-100 to-orange-200 rounded-xl p-4 mb-4 inline-block">
                        <i class="fas fa-bell text-orange-600 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Alertas Inteligentes</h3>
                    <p class="text-gray-600 text-sm">Recibe notificaciones de vencimientos y alertas</p>
                </div>
            </div>
        </div>
    </div>
</div>