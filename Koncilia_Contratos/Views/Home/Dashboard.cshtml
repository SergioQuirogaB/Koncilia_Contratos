<!-- Tarjetas financieras -->
<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 mb-6">
    <!-- Valor Total Activos -->
    <div class="bg-gradient-to-br from-white to-[#f6fbff] border-l-4 border-[#0c1791] rounded-xl shadow-sm p-4 hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded-lg bg-[#0c1791]/10 text-[#0c1791] flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-base"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Cartera Activa</p>
                    <h2 class="text-2xl font-semibold text-gray-900">
                        @(((decimal)ViewBag.ValorTotalActivos).ToString("C0", new System.Globalization.CultureInfo("es-CO")))
                    </h2>
                </div>
            </div>
        </div>
        <p class="text-xs text-gray-600">Total en contratos activos</p>
    </div>
    
    <!-- Valor Pendiente -->
    <div class="bg-gradient-to-br from-white to-[#f6fbff] border-l-4 border-[#0ff2f2] rounded-xl shadow-sm p-4 hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded-lg bg-[#0ff2f2]/10 text-[#0c1791] flex items-center justify-center">
                    <i class="fas fa-hourglass-half text-base"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Pendiente</p>
                    <h2 class="text-2xl font-semibold text-gray-900">
                        @(((decimal)ViewBag.ValorTotalPendiente).ToString("C0", new System.Globalization.CultureInfo("es-CO")))
                    </h2>
                </div>
            </div>
        </div>
        <p class="text-xs text-gray-600">Por ejecutar en contratos</p>
    </div>
    
    <!-- % Ejecución Promedio -->
    <div class="bg-gradient-to-br from-white to-[#f6fbff] border border-[#0c1791]/12 rounded-xl shadow-sm p-4 hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded-lg bg-gray-50 text-gray-700 flex items-center justify-center border border-gray-200">
                    <i class="fas fa-chart-line text-base"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Ejecución</p>
                    <h2 class="text-2xl font-semibold text-gray-900">
                        @(((decimal)ViewBag.PromedioEjecucion).ToString("F1"))%
                    </h2>
                </div>
            </div>
        </div>
        <div class="w-full bg-gray-100 rounded-full h-1.5">
            <div class="bg-gradient-to-r from-[#0c1791] to-[#0ff2f2] h-1.5 rounded-full transition-all" style="width: @(((decimal)ViewBag.PromedioEjecucion).ToString("F0"))%"></div>
        </div>
    </div>
</div>

<!-- Tarjetas de estadísticas -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6">
    <!-- Contratos Activos -->
    <div class="bg-gradient-to-br from-white to-[#f6fbff] border border-[#0c1791]/12 rounded-xl shadow-sm p-4 hover:shadow-md hover:border-[#0c1791]/30 transition">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded-lg bg-[#0c1791]/10 text-[#0c1791] flex items-center justify-center border border-[#0c1791]/20">
                    <i class="fas fa-file-contract text-base"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Activos</p>
                    <p class="text-2xl font-semibold text-gray-900">@ViewBag.ContratosActivos</p>
                </div>
            </div>
            <a asp-controller="Contratos" asp-action="Index" asp-route-estado="Activo" class="text-xs text-[#0c1791] hover:text-[#0a1478] flex items-center gap-1 font-medium">
                Ver
                <i class="fas fa-arrow-right text-xs"></i>
            </a>
        </div>
    </div>
    
    <!-- Contratos Completados -->
    <div class="bg-gradient-to-br from-white to-[#f6fbff] border border-[#0c1791]/12 rounded-xl shadow-sm p-4 hover:shadow-md hover:border-[#0c1791]/30 transition">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded-lg bg-[#0ff2f2]/12 text-[#0c1791] flex items-center justify-center border border-[#0ff2f2]/40">
                    <i class="fas fa-check-circle text-base"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Completados</p>
                    <p class="text-2xl font-semibold text-gray-900">@ViewBag.ContratosCompletados</p>
                </div>
            </div>
            <a asp-controller="Contratos" asp-action="Index" asp-route-estado="Finalizado" class="text-xs text-[#0c1791] hover:text-[#0a1478] flex items-center gap-1 font-medium">
                Ver
                <i class="fas fa-arrow-right text-xs"></i>
            </a>
        </div>
    </div>
    
    <!-- Pendientes -->
    <div class="bg-gradient-to-br from-white to-[#f6fbff] border border-[#0c1791]/12 rounded-xl shadow-sm p-4 hover:shadow-md hover:border-[#0c1791]/30 transition">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded-lg bg-[#0c1791]/10 text-[#0c1791] flex items-center justify-center border border-[#0c1791]/20">
                    <i class="fas fa-clock text-base"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Pendientes</p>
                    <p class="text-2xl font-semibold text-gray-900">@ViewBag.ContratosPendientes</p>
                </div>
            </div>
            <a asp-controller="Contratos" asp-action="Index" class="text-xs text-[#0c1791] hover:text-[#0a1478] flex items-center gap-1 font-medium">
                Ver
                <i class="fas fa-arrow-right text-xs"></i>
            </a>
        </div>
    </div>
    
    <!-- Vencidos -->
    <div class="bg-gradient-to-br from-white to-[#f6fbff] border border-[#0c1791]/12 rounded-xl shadow-sm p-4 hover:shadow-md hover:border-[#0c1791]/30 transition">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded-lg bg-[#0ff2f2]/12 text-[#0c1791] flex items-center justify-center border border-[#0ff2f2]/40">
                    <i class="fas fa-exclamation-triangle text-base"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500 uppercase tracking-wide">Vencidos</p>
                    <p class="text-2xl font-semibold text-gray-900">@ViewBag.ContratosVencidos</p>
                </div>
            </div>
            <a asp-controller="Contratos" asp-action="Index" class="text-xs text-[#0c1791] hover:text-[#0a1478] flex items-center gap-1 font-medium">
                Ver
                <i class="fas fa-arrow-right text-xs"></i>
            </a>
        </div>
    </div>
</div>

<!-- Acciones Rápidas -->
<div class="mb-6">
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-bolt text-[#0c1791]"></i>
                Acciones rápidas
            </h3>
        </div>
        <div class="p-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
            <a asp-controller="Contratos" asp-action="Create" 
               class="flex items-center gap-3 px-4 py-3 bg-[#0c1791] text-white rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition">
                <i class="fas fa-plus-circle text-xl"></i>
                <span class="font-semibold text-sm">Nuevo contrato</span>
            </a>
            <a asp-controller="Contratos" asp-action="Index" 
               class="flex items-center gap-3 px-4 py-3 bg-white border border-gray-200 text-gray-700 rounded-lg shadow-sm hover:shadow-md hover:border-[#0c1791] hover:text-[#0c1791] transition">
                <i class="fas fa-list-ul text-xl"></i>
                <span class="font-semibold text-sm">Ver contratos</span>
            </a>
            <a asp-controller="Contratos" asp-action="Importar" 
               class="flex items-center gap-3 px-4 py-3 bg-white border border-gray-200 text-gray-700 rounded-lg shadow-sm hover:shadow-md hover:border-[#0c1791] hover:text-[#0c1791] transition">
                <i class="fas fa-file-upload text-xl"></i>
                <span class="font-semibold text-sm">Importar Excel</span>
            </a>
            <a asp-controller="Reportes" asp-action="Index" 
               class="flex items-center gap-3 px-4 py-3 bg-white border border-gray-200 text-gray-700 rounded-lg shadow-sm hover:shadow-md hover:border-[#0c1791] hover:text-[#0c1791] transition">
                <i class="fas fa-chart-bar text-xl"></i>
                <span class="font-semibold text-sm">Reportes</span>
            </a>
        </div>
    </div>
</div>

<!-- Notificaciones y Alertas -->
<div class="mb-6">
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-bell text-[#0c1791]"></i>
                Notificaciones y alertas
                @{
                    var notificaciones = ViewBag.Notificaciones as List<object>;
                    var contadorNotif = notificaciones?.Count ?? 0;
                }
                @if (contadorNotif > 0)
                {
                    <span class="ml-2 bg-[#0c1791] text-white text-xs font-bold px-2.5 py-1 rounded-full shadow-sm">
                        @contadorNotif
                    </span>
                }
            </h3>
        </div>
        <div class="p-4">
            @if (notificaciones != null && notificaciones.Any())
            {
                <div class="space-y-2">
                    @foreach (dynamic notif in notificaciones)
                    {
                        <a href="@notif.Url" class="group block p-3 bg-gradient-to-r from-white to-[#f6fbff] border-l-4 @(notif.Color == "red" ? "border-red-500" : notif.Color == "yellow" ? "border-yellow-500" : "border-[#0c1791]") rounded-lg hover:shadow-md hover:border-[#0c1791] transition">
                            <div class="flex items-start gap-3">
                                <div class="flex-shrink-0">
                                    <div class="h-9 w-9 rounded-lg @(notif.Color == "red" ? "bg-red-50 text-red-600" : notif.Color == "yellow" ? "bg-yellow-50 text-yellow-600" : "bg-[#0c1791]/10 text-[#0c1791]") flex items-center justify-center border @(notif.Color == "red" ? "border-red-200" : notif.Color == "yellow" ? "border-yellow-200" : "border-[#0c1791]/20")">
                                        <i class="fas @notif.Icono text-base"></i>
                                    </div>
                                </div>
                                
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-start justify-between mb-1">
                                        <h4 class="text-sm font-semibold text-gray-900 pr-4 group-hover:text-[#0c1791] transition">
                                            @notif.Titulo
                                        </h4>
                                        @if (notif.Tipo == "error")
                                        {
                                            <span class="flex-shrink-0 bg-red-100 text-red-700 text-xs font-bold px-2 py-0.5 rounded-full border border-red-300">
                                                Urgente
                                            </span>
                                        }
                                    </div>
                                    <p class="text-xs text-gray-600 mb-1.5 leading-relaxed">
                                        @notif.Descripcion
                                    </p>
                                    <div class="flex items-center text-xs font-semibold text-[#0c1791] group-hover:text-[#0a1478] transition">
                                        <span>Ver detalles</span>
                                        <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <div class="inline-block bg-gradient-to-br from-[#0c1791]/10 to-[#0ff2f2]/10 rounded-full p-5 mb-3 border border-[#0c1791]/20">
                        <i class="fas fa-check-circle text-[#0c1791] text-4xl"></i>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-900 mb-1.5">Todo al día</h4>
                    <p class="text-sm text-gray-600 mb-4">No tienes notificaciones ni alertas pendientes.</p>
                    <a asp-controller="Contratos" asp-action="Index" 
                       class="inline-flex items-center gap-2 px-4 py-2 bg-[#0c1791] text-white font-semibold rounded-lg hover:bg-[#0a1478] shadow-sm hover:shadow-md transition text-sm">
                        <i class="fas fa-list"></i>
                        Ver todos los contratos
                    </a>
                </div>
            }
        </div>
    </div>
</div>
