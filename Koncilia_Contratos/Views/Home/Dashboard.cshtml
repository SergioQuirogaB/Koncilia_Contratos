@{
    ViewData["Title"] = "Dashboard";
}

<!-- Header del Dashboard -->
<div class="mb-8">
    <div class="bg-gradient-to-r from-[#0c1892] via-[#0c1892] to-[#0ff2f2] rounded-2xl p-8 shadow-2xl">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl sm:text-4xl font-bold text-white mb-2 drop-shadow-lg">
                    Â¡Bienvenido, @ViewBag.UserName! ðŸ‘‹
                </h1>
                <p class="text-blue-100 text-lg">AquÃ­ tienes un resumen de tus contratos</p>
            </div>
            <div class="hidden md:block">
                <div class="bg-white bg-opacity-20 backdrop-blur-lg rounded-xl p-4 text-white">
                    <i class="fas fa-calendar-alt mr-2"></i>
