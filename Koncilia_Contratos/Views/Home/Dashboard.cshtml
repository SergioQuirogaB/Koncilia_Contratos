@{
    ViewData["Title"] = "Dashboard";
}

<!-- Header del Dashboard -->
<div class="mb-6 sm:mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-3 sm:space-y-0">
        
        <div class="flex items-center space-x-3">
            <span class="hidden sm:inline-block text-sm text-gray-600">@ViewBag.UserEmail</span>
            <form method="post" action="@Url.Action("Logout", "Account")">
                <button type="submit" 
                        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 rounded-lg shadow-md hover:shadow-lg transition">
                    <i class="fas fa-sign-out-alt mr-2"></i>
                    <span class="hidden sm:inline">Cerrar Sesión</span>
                    <span class="sm:hidden">Salir</span>
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Tarjetas de estadísticas -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6 sm:mb-8">
    <!-- Contratos Activos -->
    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition overflow-hidden">
        <div class="p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-semibold text-blue-600 uppercase tracking-wider mb-1">Contratos Activos</p>
                    <p class="text-3xl font-bold text-gray-900">24</p>
                </div>
                <div class="bg-blue-100 rounded-full p-3">
                    <i class="fas fa-file-contract text-blue-600 text-2xl"></i>
                </div>
            </div>
            <div class="mt-3 flex items-center text-sm">
                <span class="text-green-600 font-semibold flex items-center">
                    <i class="fas fa-arrow-up mr-1"></i> 12%
                </span>
                <span class="text-gray-600 ml-2">vs mes anterior</span>
            </div>
        </div>
        <div class="bg-blue-50 px-5 py-2">
            <a href="#" class="text-xs font-medium text-blue-600 hover:text-blue-800 flex items-center">
                Ver detalles <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
    </div>
    
    <!-- Contratos Completados -->
    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition overflow-hidden">
        <div class="p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-semibold text-green-600 uppercase tracking-wider mb-1">Completados</p>
                    <p class="text-3xl font-bold text-gray-900">156</p>
                </div>
                <div class="bg-green-100 rounded-full p-3">
                    <i class="fas fa-check-circle text-green-600 text-2xl"></i>
                </div>
            </div>
            <div class="mt-3 flex items-center text-sm">
                <span class="text-green-600 font-semibold flex items-center">
                    <i class="fas fa-arrow-up mr-1"></i> 8%
                </span>
                <span class="text-gray-600 ml-2">vs mes anterior</span>
            </div>
        </div>
        <div class="bg-green-50 px-5 py-2">
            <a href="#" class="text-xs font-medium text-green-600 hover:text-green-800 flex items-center">
                Ver detalles <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
    </div>
    
    <!-- Pendientes de Revisión -->
    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition overflow-hidden">
        <div class="p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-semibold text-yellow-600 uppercase tracking-wider mb-1">Pendientes</p>
                    <p class="text-3xl font-bold text-gray-900">8</p>
                </div>
                <div class="bg-yellow-100 rounded-full p-3">
                    <i class="fas fa-clock text-yellow-600 text-2xl"></i>
                </div>
            </div>
            <div class="mt-3 flex items-center text-sm">
                <span class="text-red-600 font-semibold flex items-center">
                    <i class="fas fa-arrow-down mr-1"></i> 3%
                </span>
                <span class="text-gray-600 ml-2">vs mes anterior</span>
            </div>
        </div>
        <div class="bg-yellow-50 px-5 py-2">
            <a href="#" class="text-xs font-medium text-yellow-600 hover:text-yellow-800 flex items-center">
                Ver detalles <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
    </div>
    
    <!-- Vencidos -->
    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition overflow-hidden">
        <div class="p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-semibold text-red-600 uppercase tracking-wider mb-1">Vencidos</p>
                    <p class="text-3xl font-bold text-gray-900">3</p>
                </div>
                <div class="bg-red-100 rounded-full p-3">
                    <i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i>
                </div>
            </div>
            <div class="mt-3 flex items-center text-sm">
                <span class="text-red-600 font-semibold flex items-center">
                    <i class="fas fa-exclamation-circle mr-1"></i> ¡Atención!
                </span>
                <span class="text-gray-600 ml-2">Requiere acción</span>
            </div>
        </div>
        <div class="bg-red-50 px-5 py-2">
            <a href="#" class="text-xs font-medium text-red-600 hover:text-red-800 flex items-center">
                Ver detalles <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
    </div>
</div>

<!-- Tarjetas financieras adicionales -->
<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">
    <!-- Valor Total Activos -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden border-l-4 border-cyan-500">
        <div class="p-5">
            <div class="flex items-center justify-between mb-2">
                <h5 class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Valor Cartera Activa</h5>
                <i class="fas fa-dollar-sign text-cyan-500 text-2xl"></i>
            </div>
            <h2 class="text-2xl font-bold text-cyan-600 mb-1">@(((decimal)ViewBag.ValorTotalActivos).ToString("C0", new System.Globalization.CultureInfo("es-CO")))</h2>
            <p class="text-xs text-gray-500">Total en contratos activos</p>
        </div>
    </div>
    
    <!-- Valor Pendiente -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden border-l-4 border-orange-500">
        <div class="p-5">
            <div class="flex items-center justify-between mb-2">
                <h5 class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Valor Pendiente</h5>
                <i class="fas fa-hourglass-half text-orange-500 text-2xl"></i>
            </div>
            <h2 class="text-2xl font-bold text-orange-600 mb-1">@(((decimal)ViewBag.ValorTotalPendiente).ToString("C0", new System.Globalization.CultureInfo("es-CO")))</h2>
            <p class="text-xs text-gray-500">Por ejecutar</p>
        </div>
    </div>
    
    <!-- % Ejecución Promedio -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden border-l-4 border-purple-500">
        <div class="p-5">
            <div class="flex items-center justify-between mb-2">
                <h5 class="text-xs font-semibold text-gray-600 uppercase tracking-wider">% Ejecución Promedio</h5>
                <i class="fas fa-chart-line text-purple-500 text-2xl"></i>
            </div>
            <h2 class="text-2xl font-bold text-purple-600 mb-1">@(((decimal)ViewBag.PromedioEjecucion).ToString("F1"))%</h2>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
                <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-2 rounded-full" style="width: @(((decimal)ViewBag.PromedioEjecucion).ToString("F0"))%"></div>
            </div>
        </div>
    </div>
</div>

<!-- Contenido principal -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Contratos Recientes (2/3) -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="px-5 py-4 border-b border-gray-200 flex items-center justify-between">
                <h3 class="text-lg font-bold text-gray-900 flex items-center">
                    <i class="fas fa-list text-blue-600 mr-2"></i>
                    Contratos Recientes
                </h3>
                <a asp-controller="Contratos" asp-action="Index" 
                   class="text-sm font-medium text-blue-600 hover:text-blue-800 flex items-center">
                    Ver todos <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            
            <!-- Tabla responsive -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">Tipo</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Fecha</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">#001</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Empresa ABC S.A.</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600 hidden sm:table-cell">Servicio</td>
                            <td class="px-4 py-3 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <i class="fas fa-circle text-green-500 mr-1" style="font-size: 6px;"></i>
                                    Activo
                                </span>
                            </td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600 hidden md:table-cell">15/01/2024</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm">
                                <div class="flex space-x-2">
                                    <button class="text-blue-600 hover:text-blue-800 transition">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="text-yellow-600 hover:text-yellow-800 transition">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">#002</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Corporación XYZ</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600 hidden sm:table-cell">Suministro</td>
                            <td class="px-4 py-3 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    <i class="fas fa-circle text-yellow-500 mr-1" style="font-size: 6px;"></i>
                                    Pendiente
                                </span>
                            </td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600 hidden md:table-cell">14/01/2024</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm">
                                <div class="flex space-x-2">
                                    <button class="text-blue-600 hover:text-blue-800 transition">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="text-yellow-600 hover:text-yellow-800 transition">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">#003</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Industrias DEF</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600 hidden sm:table-cell">Mantenimiento</td>
                            <td class="px-4 py-3 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    <i class="fas fa-circle text-red-500 mr-1" style="font-size: 6px;"></i>
                                    Vencido
                                </span>
                            </td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600 hidden md:table-cell">10/01/2024</td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm">
                                <div class="flex space-x-2">
                                    <button class="text-blue-600 hover:text-blue-800 transition">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="text-yellow-600 hover:text-yellow-800 transition">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Panel lateral (1/3) -->
    <div class="lg:col-span-1 space-y-6">
        <!-- Acciones Rápidas -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="px-5 py-4 border-b border-gray-200">
                <h3 class="text-lg font-bold text-gray-900 flex items-center">
                    <i class="fas fa-bolt text-yellow-500 mr-2"></i>
                    Acciones Rápidas
                </h3>
            </div>
            <div class="p-5 space-y-3">
                <a asp-controller="Contratos" asp-action="Create" 
                   class="flex items-center justify-between w-full px-4 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white rounded-lg shadow-md hover:shadow-lg transition">
                    <span class="flex items-center font-medium">
                        <i class="fas fa-plus mr-3"></i>
                        Nuevo Contrato
                    </span>
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a asp-controller="Contratos" asp-action="Index" 
                   class="flex items-center justify-between w-full px-4 py-3 bg-white hover:bg-gray-50 border-2 border-gray-200 hover:border-blue-300 text-gray-700 rounded-lg transition">
                    <span class="flex items-center font-medium">
                        <i class="fas fa-list mr-3"></i>
                        Ver Contratos
                    </span>
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a asp-controller="Contratos" asp-action="Importar" 
                   class="flex items-center justify-between w-full px-4 py-3 bg-white hover:bg-gray-50 border-2 border-gray-200 hover:border-blue-300 text-gray-700 rounded-lg transition">
                    <span class="flex items-center font-medium">
                        <i class="fas fa-file-import mr-3"></i>
                        Importar
                    </span>
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a asp-controller="Reportes" asp-action="Index" 
                   class="flex items-center justify-between w-full px-4 py-3 bg-white hover:bg-gray-50 border-2 border-gray-200 hover:border-blue-300 text-gray-700 rounded-lg transition">
                    <span class="flex items-center font-medium">
                        <i class="fas fa-chart-bar mr-3"></i>
                        Reportes
                    </span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
        
        <!-- Notificaciones -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="px-5 py-4 bg-gradient-to-r from-purple-500 to-indigo-600 border-b border-purple-700">
                <h3 class="text-lg font-semibold text-white flex items-center">
                    <i class="fas fa-bell mr-2 animate-pulse"></i>
                    Notificaciones
                </h3>
            </div>
            <div class="divide-y divide-gray-200">
                @if (ViewBag.Notificaciones != null && ((List<object>)ViewBag.Notificaciones).Any())
                {
                    @foreach (dynamic notif in (List<object>)ViewBag.Notificaciones)
                    {
                        <a href="@notif.Url" class="block p-4 hover:bg-gray-50 transition">
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <div class="bg-@(notif.Color)-100 rounded-full p-2 shadow-sm">
                                        <i class="fas @notif.Icono text-@(notif.Color)-600"></i>
                                    </div>
                                </div>
                                <div class="ml-3 flex-1">
                                    <p class="text-sm font-medium text-gray-900">@notif.Titulo</p>
                                    <p class="text-xs text-gray-500 mt-1">@notif.Descripcion</p>
                                </div>
                                @if (notif.Tipo == "error")
                                {
                                    <span class="flex-shrink-0 ml-2 bg-red-100 text-red-800 text-xs font-semibold px-2 py-1 rounded-full">!</span>
                                }
                            </div>
                        </a>
                    }
                }
                else
                {
                    <div class="p-8 text-center text-gray-400">
                        <i class="fas fa-check-circle text-4xl mb-2"></i>
                        <p class="text-sm">No hay notificaciones pendientes</p>
                    </div>
                }
            </div>
            <div class="px-5 py-3 bg-gray-50 border-t border-gray-200">
                <a asp-controller="Contratos" asp-action="Index" class="text-sm font-medium text-blue-600 hover:text-blue-800 flex items-center justify-center">
                    Ver todos los contratos
                    <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
</div>
