            <div class="flex items-center justify-between mb-3">
                <div class="bg-white bg-opacity-25 backdrop-blur-sm rounded-xl p-3">
                    <i class="fas fa-chart-line text-white text-2xl"></i>
                </div>
                <div class="text-right">
                    <p class="text-purple-100 text-xs font-semibold uppercase tracking-wider mb-1">EjecuciÃ³n</p>
                    <h2 class="text-2xl font-black text-white drop-shadow-lg">
                        @(((decimal)ViewBag.PromedioEjecucion).ToString("F1"))%
                    </h2>
                </div>
            </div>
            <div class="pt-3 border-t border-white border-opacity-30">
                <div class="w-full bg-white bg-opacity-30 rounded-full h-2">
                    <div class="bg-white h-2 rounded-full shadow-lg transition-all" style="width: @(((decimal)ViewBag.PromedioEjecucion).ToString("F0"))%"></div>
                </div>
            </div>
