<!-- Tarjetas de estadÃ­sticas -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8">
    <!-- Contratos Activos -->
    <div class="relative bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all overflow-hidden group">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 rounded-full bg-white opacity-10 group-hover:scale-150 transition-transform"></div>
        <div class="p-6 relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-white bg-opacity-25 backdrop-blur-sm rounded-xl p-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-file-contract text-white text-3xl"></i>
                </div>
                <div class="text-right">
                    <p class="text-blue-100 text-sm font-semibold uppercase tracking-wide mb-1">Activos</p>
                    <p class="text-4xl font-black text-white drop-shadow-lg">@ViewBag.ContratosActivos</p>
                </div>
            </div>
            <div class="pt-4 border-t border-white border-opacity-30">
                <a asp-controller="Contratos" asp-action="Index" asp-route-estado="Activo" 
                   class="text-white text-sm font-medium flex items-center hover:text-blue-100 transition">
                    Ver contratos activos <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Contratos Completados -->
    <div class="relative bg-gradient-to-br from-emerald-500 to-green-600 rounded-2xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all overflow-hidden group">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 rounded-full bg-white opacity-10 group-hover:scale-150 transition-transform"></div>
        <div class="p-6 relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-white bg-opacity-25 backdrop-blur-sm rounded-xl p-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-check-circle text-white text-3xl"></i>
                </div>
                <div class="text-right">
                    <p class="text-green-100 text-sm font-semibold uppercase tracking-wide mb-1">Completados</p>
                    <p class="text-4xl font-black text-white drop-shadow-lg">@ViewBag.ContratosCompletados</p>
                </div>
            </div>
            <div class="pt-4 border-t border-white border-opacity-30">
                <a asp-controller="Contratos" asp-action="Index" asp-route-estado="Finalizado" 
                   class="text-white text-sm font-medium flex items-center hover:text-green-100 transition">
                    Ver completados <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Pendientes -->
    <div class="relative bg-gradient-to-br from-amber-500 to-orange-600 rounded-2xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all overflow-hidden group">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 rounded-full bg-white opacity-10 group-hover:scale-150 transition-transform"></div>
        <div class="p-6 relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-white bg-opacity-25 backdrop-blur-sm rounded-xl p-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-clock text-white text-3xl"></i>
                </div>
                <div class="text-right">
                    <p class="text-orange-100 text-sm font-semibold uppercase tracking-wide mb-1">Pendientes</p>
                    <p class="text-4xl font-black text-white drop-shadow-lg">@ViewBag.ContratosPendientes</p>
                </div>
            </div>
            <div class="pt-4 border-t border-white border-opacity-30">
                <a asp-controller="Contratos" asp-action="Index" 
                   class="text-white text-sm font-medium flex items-center hover:text-orange-100 transition">
                    Ver pendientes <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Vencidos -->
    <div class="relative bg-gradient-to-br from-red-500 to-rose-600 rounded-2xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all overflow-hidden group">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 rounded-full bg-white opacity-10 group-hover:scale-150 transition-transform"></div>
        <div class="p-6 relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-white bg-opacity-25 backdrop-blur-sm rounded-xl p-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-exclamation-triangle text-white text-3xl"></i>
                </div>
                <div class="text-right">
                    <p class="text-red-100 text-sm font-semibold uppercase tracking-wide mb-1">Vencidos</p>
                    <p class="text-4xl font-black text-white drop-shadow-lg">@ViewBag.ContratosVencidos</p>
                </div>
            </div>
            <div class="pt-4 border-t border-white border-opacity-30">
                <a asp-controller="Contratos" asp-action="Index" 
                   class="text-white text-sm font-medium flex items-center hover:text-red-100 transition">
                    Ver vencidos <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Tarjetas financieras -->
