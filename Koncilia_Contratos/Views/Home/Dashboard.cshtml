<!-- Notificaciones y Alertas -->
<div class="mb-6">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-t-4 border-purple-500">
        <div class="px-6 py-4 bg-gradient-to-r from-purple-500 via-indigo-500 to-purple-600">
            <h3 class="text-lg font-bold text-white flex items-center">
                <i class="fas fa-bell mr-2 animate-pulse"></i>
                Notificaciones y Alertas
                @{
                    var notificaciones = ViewBag.Notificaciones as List<object>;
                    var contadorNotif = notificaciones?.Count ?? 0;
                }
                @if (contadorNotif > 0)
                {
                    <span class="ml-2 bg-white text-purple-600 text-xs font-bold px-2.5 py-1 rounded-full shadow-md">
                        @contadorNotif
                    </span>
                }
            </h3>
        </div>
        <div class="p-6">
            @if (notificaciones != null && notificaciones.Any())
            {
                <div class="space-y-3">
                    @foreach (dynamic notif in notificaciones)
                    {
                        <a href="@notif.Url" class="block p-5 bg-gradient-to-r @(notif.Color == "red" ? "from-red-50 to-red-100 border-l-4 border-red-500 hover:border-red-600 hover:shadow-red-200" : notif.Color == "yellow" ? "from-yellow-50 to-yellow-100 border-l-4 border-yellow-500 hover:border-yellow-600 hover:shadow-yellow-200" : "from-green-50 to-green-100 border-l-4 border-green-500 hover:border-green-600 hover:shadow-green-200") rounded-xl hover:shadow-lg transform hover:-translate-x-1 transition-all group">
                            <div class="flex items-center gap-4">
                                <!-- Icono -->
                                <div class="flex-shrink-0">
                                    <div class="@(notif.Color == "red" ? "bg-red-500" : notif.Color == "yellow" ? "bg-yellow-500" : "bg-green-500") rounded-xl p-4 shadow-lg group-hover:scale-110 group-hover:rotate-3 transition-transform">
                                        <i class="fas @notif.Icono text-white text-2xl"></i>
                                    </div>
                                </div>
                                
                                <!-- Contenido -->
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-start justify-between mb-2">
                                        <h4 class="text-base font-bold @(notif.Color == "red" ? "text-red-900" : notif.Color == "yellow" ? "text-yellow-900" : "text-green-900") pr-4">
                                            @notif.Titulo
                                        </h4>
                                        @if (notif.Tipo == "error")
                                        {
                                            <span class="flex-shrink-0 bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-md animate-pulse">
                                                Â¡URGENTE!
                                            </span>
                                        }
                                    </div>
                                    <p class="text-sm @(notif.Color == "red" ? "text-red-700" : notif.Color == "yellow" ? "text-yellow-700" : "text-green-700") mb-3">
                                        @notif.Descripcion
                                    </p>
                                    <div class="flex items-center text-xs font-semibold @(notif.Color == "red" ? "text-red-600" : notif.Color == "yellow" ? "text-yellow-600" : "text-green-600")">
                                        <span>Ver detalles del contrato</span>
                                        <i class="fas fa-arrow-right ml-2 group-hover:translate-x-2 transition-transform"></i>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <div class="inline-block bg-gradient-to-br from-green-100 to-emerald-100 rounded-full p-6 mb-4 shadow-lg">
                        <i class="fas fa-check-circle text-green-500 text-6xl"></i>
                    </div>
                    <h4 class="text-xl font-bold text-gray-900 mb-2">Â¡Todo al dÃ­a! ðŸŽ‰</h4>
                    <p class="text-gray-600 mb-6">No tienes notificaciones ni alertas pendientes</p>
                    <a asp-controller="Contratos" asp-action="Index" 
                       class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all">
                        <i class="fas fa-list mr-2"></i>
                        Ver todos los contratos
                    </a>
                </div>
            }
        </div>
    </div>
</div>
