@model IEnumerable<Koncilia_Contratos.Models.Contrato>

@{
    ViewData["Title"] = "Gestión de Contratos";
}

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 4000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            Toast.fire({
                icon: 'success',
                title: '@TempData["Success"]',
                customClass: {
                    popup: 'rounded-2xl shadow-2xl',
                    title: 'text-lg font-bold text-green-800'
                }
            });
        });
    </script>
}

<!-- Botones de acción -->
<div class="mb-5 grid grid-cols-1 sm:grid-cols-3 gap-3">
    <a asp-action="Create" 
       class="flex items-center gap-3 px-4 py-3 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
        <i class="fas fa-plus-circle text-lg"></i>
        <span>Nuevo Contrato</span>
    </a>
    <a asp-action="Importar" 
       class="flex items-center gap-3 px-4 py-3 bg-white border border-gray-200 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md hover:border-[#1b7348] hover:text-[#1b7348] transition text-sm">
        <i class="fas fa-file-excel text-lg"></i>
        <span>Importar Excel</span>
    </a>
    <a asp-action="Exportar" 
       class="flex items-center gap-3 px-4 py-3 bg-white border border-gray-200 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md hover:border-[#ce1410] hover:text-[#e02128] transition text-sm">
        <i class="fas fa-download text-lg"></i>
        <span>Exportar a Excel</span>
    </a>
</div>

<!-- Filtros de búsqueda -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden mb-5">
    <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
        <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
            <i class="fas fa-filter text-[#0c1791]"></i>
            Filtros de búsqueda
        </h3>
    </div>
    <div class="p-4">
        <form asp-action="Index" method="get" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-12 gap-3">
            <!-- Búsqueda -->
            <div class="sm:col-span-2 lg:col-span-4">
                <label class="block text-xs font-semibold text-gray-700 mb-1.5">
                    <i class="fas fa-search text-[#0c1791] mr-1 text-xs"></i> Búsqueda
                </label>
                <input type="text" 
                       name="searchString" 
                       value="@ViewData["CurrentFilter"]" 
                       placeholder="Cliente, Empresa o N° Contrato"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm">
            </div>
            
            <!-- Estado -->
            <div class="lg:col-span-3">
                <label class="block text-xs font-semibold text-gray-700 mb-1.5">
                    <i class="fas fa-tasks text-[#0c1791] mr-1 text-xs"></i> Estado
                </label>
                <select name="estado" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm">
                    <option value="">Todos los estados</option>
                    <option value="Activo" selected="@(ViewData["CurrentEstado"]?.ToString() == "Activo")">Activo</option>
                    <option value="Inactivo" selected="@(ViewData["CurrentEstado"]?.ToString() == "Inactivo")">Inactivo</option>
                    <option value="Finalizado" selected="@(ViewData["CurrentEstado"]?.ToString() == "Finalizado")">Finalizado</option>
                    <option value="Suspendido" selected="@(ViewData["CurrentEstado"]?.ToString() == "Suspendido")">Suspendido</option>
                </select>
            </div>
            
            <!-- Año -->
            <div class="lg:col-span-2">
                <label class="block text-xs font-semibold text-gray-700 mb-1.5">
                    <i class="fas fa-calendar text-[#0c1791] mr-1 text-xs"></i> Año
                </label>
                <input type="number" 
                       name="anio" 
                       value="@ViewData["CurrentAnio"]" 
                       placeholder="2025" 
                       min="2000" 
                       max="2100"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition text-sm">
            </div>
            
            <!-- Botones -->
            <div class="sm:col-span-2 lg:col-span-3 flex items-end gap-2">
                <button type="submit" 
                        class="flex-1 flex items-center justify-center gap-2 px-4 py-2 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
                    <i class="fas fa-search"></i>
                    Buscar
                </button>
                <a asp-action="Index" 
                   class="px-3 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md transition">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Tabla de contratos -->
@if (Model.Any())
{
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden mb-5">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-table text-[#0c1791]"></i>
                Lista de Contratos
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-[#0c1791]">
                    <tr>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Año</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Empresa</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider hidden md:table-cell">Cliente</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">N° Contrato</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider hidden lg:table-cell">Valor</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider hidden xl:table-cell">Categoría</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider hidden sm:table-cell">F. Inicio</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider hidden lg:table-cell">F. Vencimiento</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider hidden xl:table-cell">Ejecución</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Estado</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-white uppercase tracking-wider">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-[#f6fbff] transition-all @(item.EstaVencido && item.Estado == "Activo" ? "bg-red-50" : "")">
                            <td class="px-3 py-2 whitespace-nowrap text-sm font-semibold text-gray-900">@item.Anio</td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-900">@item.Empresa</td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700 hidden md:table-cell">@item.Cliente</td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm font-semibold text-[#0c1791]">@item.NumeroContrato</td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700 hidden lg:table-cell">
                                @item.ValorPesos.ToString("C0", new System.Globalization.CultureInfo("es-CO"))
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-600 hidden xl:table-cell">
                                <span class="px-2 py-0.5 bg-gray-100 text-gray-700 rounded text-xs">@item.Categoria</span>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-600 hidden sm:table-cell">
                                @item.FechaInicio.ToString("dd/MM/yyyy")
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-600 hidden lg:table-cell">
                                <div class="flex flex-col space-y-1">
                                    <span>@item.FechaVencimiento.ToString("dd/MM/yyyy")</span>
                                    @if (item.DiasRestantes > 0 && item.DiasRestantes <= 30 && item.Estado == "Activo")
                                    {
                                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                            <i class="fas fa-clock mr-1" style="font-size: 8px;"></i>
                                            @item.DiasRestantes días
                                        </span>
                                    }
                                    else if (item.EstaVencido && item.Estado == "Activo")
                                    {
                                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                            <i class="fas fa-exclamation-triangle mr-1" style="font-size: 8px;"></i>
                                            Vencido
                                        </span>
                                    }
                                </div>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap hidden xl:table-cell">
                                @if (item.PorcentajeEjecucion.HasValue)
                                {
                                    <div class="w-full bg-gray-100 rounded-full h-1.5 overflow-hidden">
                                        <div class="h-full rounded-full bg-gradient-to-r from-[#0c1791] to-[#0ff2f2]" 
                                             style="width: @(item.PorcentajeEjecucion)%"></div>
                                    </div>
                                    <span class="text-xs text-gray-600 mt-0.5">@item.PorcentajeEjecucion.Value.ToString("F2")%</span>
                                }
                                else
                                {
                                    <span class="text-xs text-gray-400">-</span>
                                }
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap">
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium @(item.Estado == "Activo" ? "bg-green-100 text-green-800" : item.Estado == "Finalizado" ? "bg-gray-100 text-gray-800" : item.Estado == "Suspendido" ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800")">
                                    <i class="fas fa-circle mr-1" style="font-size: 6px;"></i>
                                    @item.Estado
                                </span>
                            </td>
                            <td class="px-3 py-2 whitespace-nowrap text-sm">
                                <div class="flex space-x-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                       class="text-[#0c1791] hover:text-[#0a1478] transition" 
                                       title="Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                       class="text-yellow-500 hover:text-yellow-600 transition" 
                                       title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="confirmarEliminacion(@item.Id, '@item.NumeroContrato', '@item.Cliente')" 
                                            class="text-red-500 hover:text-red-600 transition" 
                                            title="Eliminar"
                                            type="button">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Paginación -->
    @if (ViewData["TotalPages"] != null)
    {
        <div class="mt-5 flex flex-col gap-3">
            <!-- Selector de registros por página y total -->
            <div class="flex flex-col sm:flex-row items-center justify-between gap-3">
                <div class="text-xs text-gray-600">
                    Mostrando 
                    <span class="font-semibold">@(((int)ViewData["CurrentPage"] - 1) * (int)ViewData["PageSize"] + 1)</span>
                    - 
                    <span class="font-semibold">@(Math.Min((int)ViewData["CurrentPage"] * (int)ViewData["PageSize"], (int)ViewData["TotalContratos"]))</span>
                    de 
                    <span class="font-semibold">@ViewData["TotalContratos"]</span>
                    contratos
                </div>
                
                <div class="flex items-center gap-2">
                    <label class="text-xs font-semibold text-gray-700">Mostrar:</label>
                    <select id="pageSizeSelector" 
                            class="px-3 py-1.5 border border-gray-300 rounded-lg text-xs font-semibold text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-[#0c1791]/20 focus:border-[#0c1791] transition">
                        @{
                            var currentPageSize = ViewData["PageSize"]?.ToString() ?? "25";
                        }
                        <option value="25" selected="@(currentPageSize == "25")">25</option>
                        <option value="50" selected="@(currentPageSize == "50")">50</option>
                        <option value="100" selected="@(currentPageSize == "100")">100</option>
                        <option value="200" selected="@(currentPageSize == "200")">200</option>
                    </select>
                    <span class="text-xs font-semibold text-gray-700">registros</span>
                </div>
            </div>
            
            <!-- Navegación de páginas -->
            @if ((int)ViewData["TotalPages"] > 1)
            {
                <div class="flex items-center justify-center gap-2">
                    <div class="flex items-center space-x-2">
                        @{
                            var currentPage = (int)ViewData["CurrentPage"];
                            var totalPages = (int)ViewData["TotalPages"];
                            var pageSize = (int)ViewData["PageSize"];
                            var searchString = ViewData["CurrentFilter"]?.ToString();
                            var estado = ViewData["CurrentEstado"]?.ToString();
                            var anio = ViewData["CurrentAnio"];
                        }
                        
                        <!-- Botón Anterior -->
                        @if (currentPage > 1)
                        {
                            <a asp-action="Index" 
                               asp-route-pageNumber="@(currentPage - 1)"
                               asp-route-pageSize="@pageSize"
                               asp-route-searchString="@searchString"
                               asp-route-estado="@estado"
                               asp-route-anio="@anio"
                               class="inline-flex items-center gap-2 px-4 py-2 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
                                <i class="fas fa-chevron-left"></i>
                                Anterior
                            </a>
                        }
                        else
                        {
                            <span class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 border border-gray-200 text-gray-400 font-semibold rounded-lg cursor-not-allowed text-sm">
                                <i class="fas fa-chevron-left"></i>
                                Anterior
                            </span>
                        }
                        
                        <!-- Números de página -->
                        <div class="hidden md:flex items-center space-x-1">
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                if (i == currentPage)
                                {
                                    <span class="inline-flex items-center justify-center w-9 h-9 bg-[#0c1791] text-white font-bold rounded-lg text-sm">
                                        @i
                                    </span>
                                }
                                else
                                {
                                    <a asp-action="Index" 
                                       asp-route-pageNumber="@i"
                                       asp-route-pageSize="@pageSize"
                                       asp-route-searchString="@searchString"
                                       asp-route-estado="@estado"
                                       asp-route-anio="@anio"
                                       class="inline-flex items-center justify-center w-9 h-9 bg-white border border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-[#f6fbff] hover:border-[#0c1791] hover:text-[#0c1791] transition text-sm">
                                        @i
                                    </a>
                                }
                            }
                        </div>
                        
                        <!-- Botón Siguiente -->
                        @if (currentPage < totalPages)
                        {
                            <a asp-action="Index" 
                               asp-route-pageNumber="@(currentPage + 1)"
                               asp-route-pageSize="@pageSize"
                               asp-route-searchString="@searchString"
                               asp-route-estado="@estado"
                               asp-route-anio="@anio"
                               class="inline-flex items-center gap-2 px-4 py-2 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
                                Siguiente
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        }
                        else
                        {
                            <span class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 border border-gray-200 text-gray-400 font-semibold rounded-lg cursor-not-allowed text-sm">
                                Siguiente
                                <i class="fas fa-chevron-right"></i>
                            </span>
                        }
                    </div>
                </div>
            }
        </div>
    }
}
else
{
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="p-8 text-center">
            <div class="flex justify-center mb-4">
