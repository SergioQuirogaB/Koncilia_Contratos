    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

@section Scripts {
    <script>
        // Cambiar tamaño de página automáticamente
        document.getElementById('pageSizeSelector')?.addEventListener('change', function() {
            var pageSize = this.value;
            var currentUrl = new URL(window.location);
            currentUrl.searchParams.set('pageSize', pageSize);
            currentUrl.searchParams.set('pageNumber', '1'); // Resetear a página 1
            window.location.href = currentUrl.toString();
        });
        
        // Función para confirmar eliminación con SweetAlert2
        function confirmarEliminacion(id, numeroContrato, cliente) {
            Swal.fire({
                title: '¿Estás seguro?',
                html: `
                    <div class="text-left">
                        <p class="mb-2">Estás a punto de eliminar el contrato:</p>
                        <div class="bg-gray-100 p-3 rounded-lg mb-3">
                            <p class="font-bold text-gray-800">N° Contrato: ${numeroContrato}</p>
                            <p class="text-gray-600">Cliente: ${cliente}</p>
                        </div>
                        <p class="text-red-600 font-semibold">Esta acción no se puede deshacer.</p>
                    </div>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc2626',
                cancelButtonColor: '#6b7280',
                confirmButtonText: '<i class="fas fa-trash mr-2"></i>Sí, eliminar',
                cancelButtonText: '<i class="fas fa-times mr-2"></i>Cancelar',
                reverseButtons: true,
                customClass: {
                    popup: 'rounded-2xl',
                    confirmButton: 'px-6 py-3 rounded-lg font-bold shadow-lg',
                    cancelButton: 'px-6 py-3 rounded-lg font-bold shadow-lg'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Crear y enviar formulario para eliminar
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("Delete", "Contratos")';
                    
                    // Agregar token antiforgery
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
                    form.appendChild(tokenInput);
                    
                    // Agregar ID del contrato
                    const idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = 'id';
                    idInput.value = id;
                    form.appendChild(idInput);
                    
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
    @Html.AntiForgeryToken()
}
