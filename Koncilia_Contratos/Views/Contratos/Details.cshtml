@model Koncilia_Contratos.Models.Contrato

@{
    ViewData["Title"] = "Detalles del Contrato";
}

<!-- Header -->
<div class="mb-5">
    <h1 class="text-xl sm:text-2xl font-semibold text-gray-900 flex items-center gap-2 mb-1">
        <i class="fas fa-file-alt text-[#0c1791]"></i>
        Detalles del Contrato
    </h1>
    <p class="text-xs text-gray-600">Información completa del contrato seleccionado</p>
</div>

<div class="space-y-4">
    <!-- Información General -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-info-circle text-[#0c1791]"></i>
                Información General
            </h3>
        </div>
        <div class="p-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.Anio)</dt>
                    <dd class="text-sm font-semibold text-gray-900">@Html.DisplayFor(model => model.Anio)</dd>
                </div>
                
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.Empresa)</dt>
                    <dd class="text-sm font-semibold text-gray-900">@Html.DisplayFor(model => model.Empresa)</dd>
                </div>
                
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.Cliente)</dt>
                    <dd class="text-sm font-semibold text-gray-900">@Html.DisplayFor(model => model.Cliente)</dd>
                </div>
                
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.NumeroContrato)</dt>
                    <dd class="text-sm font-semibold text-[#0c1791]">@Html.DisplayFor(model => model.NumeroContrato)</dd>
                </div>
                
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.Categoria)</dt>
                    <dd class="text-sm">
                        <span class="px-2 py-0.5 bg-gray-100 text-gray-700 rounded text-xs font-medium">
                            @Html.DisplayFor(model => model.Categoria)
                        </span>
                    </dd>
                </div>
                
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.Estado)</dt>
                    <dd class="text-sm">
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium @(Model.Estado == "Activo" ? "bg-green-100 text-green-800" : Model.Estado == "Finalizado" ? "bg-gray-100 text-gray-800" : Model.Estado == "Suspendido" ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800")">
                            <i class="fas fa-circle mr-1" style="font-size: 6px;"></i>
                            @Html.DisplayFor(model => model.Estado)
                        </span>
                    </dd>
                </div>
                
                <div class="sm:col-span-2 lg:col-span-3">
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="text-sm text-gray-700 bg-gray-50 p-3 rounded-lg">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Tipo de Documento -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-file-alt text-[#0c1791]"></i>
                Tipo de Documento
            </h3>
        </div>
        <div class="p-4">
            <div class="flex flex-wrap items-center gap-6">
                <div class="flex items-center gap-4">
                    <span class="text-sm text-gray-700">@Html.DisplayFor(model => model.TipoDocumento)</span>
                    @if (!string.IsNullOrEmpty(Model.TipoDocumento))
                    {
                        <div class="w-3 h-3 bg-[#0ff2f2] rounded-sm"></div>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Numero))
                {
                    <div class="flex items-center gap-2">
                        <span class="text-sm text-gray-700">No</span>
                        <span class="text-sm font-semibold text-gray-900 border-b-2 border-[#0ff2f2] pb-1">@Html.DisplayFor(model => model.Numero)</span>
                    </div>
                }
                
                @if (Model.Valor.HasValue)
                {
                    <div class="flex items-center gap-2 flex-1 min-w-[200px]">
                        <span class="text-sm text-gray-700">Valor</span>
                        <span class="text-sm font-semibold text-gray-900 border-b-2 border-[#0ff2f2] pb-1 flex-1">
                            @Model.Valor.Value.ToString("C0", new System.Globalization.CultureInfo("es-CO"))
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Información Financiera -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-dollar-sign text-[#0c1791]"></i>
                Información Financiera
            </h3>
        </div>
        <div class="p-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-4">
                <div class="bg-gradient-to-br from-white to-[#f6fbff] border-l-4 border-[#0c1791] p-3 rounded-lg">
                    <dt class="text-xs font-semibold text-gray-600 mb-1">@Html.DisplayNameFor(model => model.ValorPesos)</dt>
                    <dd class="text-lg font-bold text-gray-900">@Model.ValorPesos.ToString("C0", new System.Globalization.CultureInfo("es-CO"))</dd>
                </div>
                
                <div class="bg-gradient-to-br from-white to-[#f6fbff] border-l-4 border-[#0ff2f2] p-3 rounded-lg">
                    <dt class="text-xs font-semibold text-gray-600 mb-1">@Html.DisplayNameFor(model => model.ValorDolares)</dt>
                    <dd class="text-lg font-bold text-gray-900">@(Model.ValorDolares.HasValue ? Model.ValorDolares.Value.ToString("C2") : "N/A")</dd>
                </div>
                
                <div class="bg-gradient-to-br from-white to-[#f6fbff] border border-gray-200 p-3 rounded-lg">
                    <dt class="text-xs font-semibold text-gray-600 mb-1">@Html.DisplayNameFor(model => model.ValorMensual)</dt>
                    <dd class="text-lg font-bold text-gray-900">@(Model.ValorMensual.HasValue ? Model.ValorMensual.Value.ToString("C0", new System.Globalization.CultureInfo("es-CO")) : "N/A")</dd>
                </div>
            </div>
            
            <div class="border-t border-gray-200 pt-4">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <div>
                        <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.ValorFacturado)</dt>
                        <dd class="text-sm font-semibold text-gray-900">@(Model.ValorFacturado.HasValue ? Model.ValorFacturado.Value.ToString("C0", new System.Globalization.CultureInfo("es-CO")) : "N/A")</dd>
                    </div>
                    
                    <div>
                        <dt class="text-xs font-semibold text-gray-500 mb-1.5">@Html.DisplayNameFor(model => model.PorcentajeEjecucion)</dt>
                        @if (Model.PorcentajeEjecucion.HasValue)
                        {
                            <dd>
                                <div class="w-full bg-gray-100 rounded-full h-1.5 overflow-hidden mb-1">
                                    <div class="h-full bg-gradient-to-r from-[#0c1791] to-[#0ff2f2]" 
                                         style="width: @(Model.PorcentajeEjecucion)%"></div>
                                </div>
                                <span class="text-xs font-semibold text-gray-700">@Model.PorcentajeEjecucion.Value.ToString("F2")%</span>
                            </dd>
                        }
                        else
                        {
                            <dd class="text-sm font-semibold text-gray-400">N/A</dd>
                        }
                    </div>
                    
                    <div>
                        <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.ValorPendiente)</dt>
                        <dd class="text-sm font-semibold text-gray-900">@(Model.ValorPendiente.HasValue ? Model.ValorPendiente.Value.ToString("C0", new System.Globalization.CultureInfo("es-CO")) : "N/A")</dd>
                    </div>
                    
                    <div>
                        <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.NumeroFactura)</dt>
                        <dd class="text-sm font-semibold text-gray-900">@Html.DisplayFor(model => model.NumeroFactura)</dd>
                    </div>
                    
                    <div>
                        <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.NumeroHoras)</dt>
                        <dd class="text-sm font-semibold text-gray-900">@Html.DisplayFor(model => model.NumeroHoras)</dd>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Fechas y Póliza -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-calendar-alt text-[#0c1791]"></i>
                Fechas y Póliza
            </h3>
        </div>
        <div class="p-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.FechaInicio)</dt>
                    <dd class="text-sm font-semibold text-gray-900 flex items-center gap-2">
                        <i class="fas fa-calendar-day text-[#0c1791] text-xs"></i>
                        @Model.FechaInicio.ToString("dd/MM/yyyy")
                    </dd>
                </div>
                
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.FechaVencimiento)</dt>
                    <dd class="text-sm font-semibold text-gray-900">
                        <div class="flex flex-col space-y-1.5">
                            <span class="flex items-center gap-2">
                                <i class="fas fa-calendar-times text-[#0c1791] text-xs"></i>
                                @Model.FechaVencimiento.ToString("dd/MM/yyyy")
                            </span>
                            @if (Model.DiasRestantes > 0 && Model.DiasRestantes <= 30 && Model.Estado == "Activo")
                            {
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 self-start">
                                    <i class="fas fa-clock mr-1" style="font-size: 8px;"></i>
                                    Vence en @Model.DiasRestantes días
                                </span>
                            }
                            else if (Model.EstaVencido && Model.Estado == "Activo")
                            {
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 self-start">
                                    <i class="fas fa-exclamation-triangle mr-1" style="font-size: 8px;"></i>
                                    Vencido
                                </span>
                            }
                        </div>
                    </dd>
                </div>
                
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.NumeroPoliza)</dt>
                    <dd class="text-sm font-semibold text-gray-900">@Html.DisplayFor(model => model.NumeroPoliza)</dd>
                </div>
                
                <div>
                    <dt class="text-xs font-semibold text-gray-500 mb-1">@Html.DisplayNameFor(model => model.FechaVencimientoPoliza)</dt>
                    <dd class="text-sm font-semibold text-gray-900">@(Model.FechaVencimientoPoliza.HasValue ? Model.FechaVencimientoPoliza.Value.ToString("dd/MM/yyyy") : "N/A")</dd>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Observaciones -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-[#f6fbff]">
            <h3 class="text-base font-semibold text-gray-900 flex items-center gap-2">
                <i class="fas fa-sticky-note text-[#0c1791]"></i>
                Observaciones
            </h3>
        </div>
        <div class="p-4">
            <p class="text-sm text-gray-700 bg-gray-50 p-3 rounded-lg">
                @Html.DisplayFor(model => model.Observaciones)
            </p>
        </div>
    </div>
    
    <!-- Botones de acción -->
    <div class="flex flex-col sm:flex-row gap-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" 
           class="flex items-center justify-center gap-2 px-5 py-2.5 bg-[#0c1791] text-white font-semibold rounded-lg shadow-sm hover:shadow-md hover:bg-[#0a1478] transition text-sm">
            <i class="fas fa-edit"></i>
            Editar
        </a>
        <a asp-action="Index" 
           class="flex items-center justify-center gap-2 px-5 py-2.5 bg-white hover:bg-gray-50 border border-gray-200 hover:border-gray-300 text-gray-700 font-semibold rounded-lg shadow-sm hover:shadow-md transition text-sm">
            <i class="fas fa-arrow-left"></i>
            Regresar al Listado
        </a>
    </div>
</div>
